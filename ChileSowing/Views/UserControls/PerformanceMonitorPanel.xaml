<UserControl x:Class="ChileSowing.Views.UserControls.PerformanceMonitorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:viewModels="clr-namespace:ChileSowing.ViewModels"
             lex:LocalizeDictionary.DesignCulture="en-US"
             lex:ResxLocalizationProvider.DefaultAssembly="ChileSowing"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             d:DesignHeight="200" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ChileSowing;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <hc:Card Padding="15" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{lex:Loc Label_PerformanceMonitor}"
                      Style="{StaticResource SectionHeaderStyle}" />
            
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Processing Status -->
                <Border Grid.Column="0" 
                        Style="{StaticResource InfoCardStyle}"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="Status24" 
                                           Margin="0,0,8,0"
                                           Foreground="{Binding IsProcessing, Converter={StaticResource BooleanToStatusColorConverter}}"/>
                            <TextBlock Text="{lex:Loc Label_ProcessingStatus}" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <Run Text="{Binding IsProcessing, Converter={StaticResource BooleanToProcessingStatusConverter}, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Text="{lex:Loc Description_CurrentOperationState}" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Last Processed -->
                <Border Grid.Column="1" 
                        Style="{StaticResource InfoCardStyle}"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="BarcodeScanner24" 
                                           Margin="0,0,8,0"
                                           Foreground="{StaticResource InfoColor}"/>
                            <TextBlock Text="{lex:Loc Label_LastProcessed}" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="{Binding LastProcessedSku, Converter={StaticResource StringToLocalizedConverter}}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding LastProcessTime, StringFormat=HH:mm:ss}" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Success Rate -->
                <Border Grid.Column="2" 
                        Style="{StaticResource InfoCardStyle}"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="CheckmarkCircle24" 
                                           Margin="0,0,8,0"
                                           Foreground="{StaticResource SuccessColor}"/>
                            <TextBlock Text="{lex:Loc Label_SuccessRate}" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource SuccessColor}">
                            <Run Text="{Binding SuccessRate, StringFormat={}{0:F1}%, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Text="{lex:Loc Description_ProcessingSuccessRate}" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Real-time Speed -->
                <Border Grid.Column="3" 
                        Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="TopSpeed24"
                                           Margin="0,0,8,0"
                                           Foreground="{StaticResource WarningColor}"/>
                            <TextBlock Text="{lex:Loc Label_RealtimeSpeed}" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock FontSize="16" FontWeight="Bold">
                            <Run Text="{Binding RealtimeSpeed, StringFormat={}{0:F1}, Mode=OneWay}"/>
                            <Run Text="{lex:Loc Unit_PcsPerMin}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </TextBlock>
                        <TextBlock Text="{lex:Loc Description_BasedOnRecentProcessing}" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </hc:Card>
</UserControl> 