<UserControl x:Class="ChileSowing.Views.UserControls.ChuteMonitorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:viewModels="clr-namespace:ChileSowing.ViewModels"
             xmlns:converters="clr-namespace:ChileSowing.Converters"
             lex:LocalizeDictionary.DesignCulture="en-US"
             lex:ResxLocalizationProvider.DefaultAssembly="ChileSowing"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ChileSowing;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器实例 -->
            <converters:ChuteGridDimensionConverter x:Key="ChuteGridDimensionConverter"/>
            <converters:ChuteGridRowsConverter x:Key="ChuteGridRowsConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <hc:Card Margin="10" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{lex:Loc Label_ChuteMonitoring}"
                      Style="{StaticResource SectionHeaderStyle}" />
            
            <!-- 使用ScrollViewer + ItemsControl + UniformGrid 实现均匀格口布局 -->
            <ScrollViewer Grid.Row="1" 
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          PanningMode="VerticalOnly">
                <ItemsControl ItemsSource="{Binding Chutes}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.IsContainerVirtualizable="True">
                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding Chutes.Count, Converter={StaticResource ChuteGridDimensionConverter}}"
                                         Rows="{Binding Chutes.Count, Converter={StaticResource ChuteGridRowsConverter}}"
                                         Margin="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding StatusColor, FallbackValue={StaticResource DefaultChuteColor}}"
                                    CornerRadius="8"
                                    Margin="4"
                                    Padding="8"
                                    MinWidth="60"
                                    MinHeight="50"
                                    MaxWidth="120"
                                    MaxHeight="90"
                                    Effect="{StaticResource CardDropShadowEffect}"
                                    Cursor="Hand">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="MouseLeftButtonUp">
                                        <prism:InvokeCommandAction Command="{Binding DataContext.ShowChutePackagesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                 CommandParameter="{Binding}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{StaticResource CardBorderColor}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorLight1}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Panel.ZIndex" Value="1"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsTargetChute}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorDark1}"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="{DynamicResource SystemAccentColor}" Opacity="0.3"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsErrorState}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SystemFillColorCritical}"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                                
                                <Grid>
                                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4">
                                            <TextBlock Text="{Binding ChuteNumber}" 
                                                       FontSize="20" 
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center" 
                                                       Foreground="#222" 
                                                       TextOptions.TextFormattingMode="Display"/>
                                            <TextBlock Text="{Binding Quantity, FallbackValue='0/0'}" 
                                                       FontSize="11"
                                                       HorizontalAlignment="Center" 
                                                       Foreground="#666" 
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Viewbox>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </hc:Card>
</UserControl> 