<ui:FluentWindow x:Class="ChileSowing.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:viewModels="clr-namespace:ChileSowing.ViewModels"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:lex="http://wpflocalizeextension.codeplex.com"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
                 Title="{lex:Loc Window_Title}"
                 WindowStartupLocation="CenterScreen">
    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <DropShadowEffect x:Key="CardDropShadowEffect" ShadowDepth="2" BlurRadius="8" Color="#FFCCCCCC" Opacity="0.3"/>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />             <!-- Title Bar -->
            <RowDefinition Height="*" />             <!-- Main Content -->
            <RowDefinition Height="28" />             <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Border Grid.Column="0" Width="48" Height="32">
                <Image Source="/logo.ico" Width="32" Height="32" Margin="8,0,8,0" 
                       VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="8" Color="#40000000" Direction="315" Opacity="0.6" ShadowDepth="2" />
                    </Image.Effect>
                </Image>
            </Border>

            <!-- Settings Button -->
            <ui:Button Grid.Column="1" Appearance="Primary" Command="{Binding OpenSettingsCommand}"
                       Margin="0,0,8,0" Padding="8,6" ToolTip="{lex:Loc Tooltip_Settings}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Settings24" Margin="0,0,8,0" />
                    <TextBlock Text="{lex:Loc Button_Settings}" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- History Button -->
            <ui:Button Grid.Column="2" Appearance="Primary" Command="{Binding ViewHistoryCommand}"
                       Margin="0,0,8,0" Padding="8,6" ToolTip="{lex:Loc Tooltip_History}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="History24" Margin="0,0,8,0" />
                    <TextBlock Text="{lex:Loc Button_History}" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- Language Menu -->
            <ui:Button Grid.Column="3" Appearance="Secondary" Margin="0,0,8,0" Padding="8,6" ToolTip="{lex:Loc Menu_Language}">
                <ui:Button.Flyout>
                    <ui:MenuFlyout>
                        <ui:MenuItem Header="{lex:Loc Language_English}" Command="{Binding ChangeLanguageCommand}" CommandParameter="en-US">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="LocalLanguage24" />
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                        <ui:MenuItem Header="{lex:Loc Language_Chinese}" Command="{Binding ChangeLanguageCommand}" CommandParameter="zh-CN">
                            <ui:MenuItem.Icon>
                                <ui:SymbolIcon Symbol="LocalLanguage24" />
                            </ui:MenuItem.Icon>
                        </ui:MenuItem>
                    </ui:MenuFlyout>
                </ui:Button.Flyout>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="LocalLanguage24" Margin="0,0,8,0" />
                    <TextBlock Text="{lex:Loc Menu_Language}" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- Title -->
            <TextBlock Grid.Column="4" Text="{lex:Loc Window_Title}" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,0,8,0" FontSize="20" FontFamily="Microsoft YaHei" FontWeight="SemiBold"
                       TextOptions.TextFormattingMode="Display" Foreground="black"
                       TextOptions.TextRenderingMode="ClearType">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.2" Direction="270" ShadowDepth="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- TitleBar Controls -->
            <ui:TitleBar Grid.Column="5" Title="" ShowMaximize="True" ShowMinimize="True" ShowClose="True" />

            <Border Grid.Column="0" Grid.ColumnSpan="6" Height="1" VerticalAlignment="Bottom"
                    Background="#20008080" BorderBrush="#40FFFFFF" BorderThickness="0,0,0,1" />
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Left Panel -->
                <ColumnDefinition Width="3*" /> <!-- Right Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <hc:Card Grid.Column="0" Margin="10" Padding="20">
                <StackPanel>
                    <!-- SKU Input -->
                    <TextBlock Text="{lex:Loc Label_ScanProductSku}"
                              Margin="8,0,0,0"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource AccentBrush}"
                              VerticalAlignment="Center" />
                    <ui:TextBox Icon="BarcodeScanner24" 
                               Text="{Binding CurrentSkuInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="20" 
                               FontWeight="Bold" 
                               PlaceholderText="{lex:Loc Placeholder_EnterScanSku}" 
                               Margin="0,0,0,20">
                        <ui:TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding ProcessSkuCommand}" 
                                      CommandParameter="{Binding CurrentSkuInput}"/>
                        </ui:TextBox.InputBindings>
                    </ui:TextBox>

                    <!-- Wave Number Input -->
                    <TextBlock Text="{lex:Loc Label_ScanWaveNumber}"
                              Margin="8,0,0,0"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource AccentBrush}"
                              VerticalAlignment="Center" />
                    <ui:TextBox Icon="BranchFork24" Text="{Binding CurrentWaveInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="20" FontWeight="Bold" PlaceholderText="{lex:Loc Placeholder_EnterScanWaveNumber}" Margin="0,0,0,20" />

                    <!-- Package Info -->
                    <Border BorderBrush="{DynamicResource TextControlBorderBrush}" BorderThickness="1" CornerRadius="4" 
                            Margin="0,20,0,20" Padding="10" Background="{DynamicResource LayerFillColorDefaultBrush}">
                        <StackPanel>
                            <TextBlock Text="{lex:Loc Label_PackageInfo}"
                                      Margin="8,0,0,0"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource AccentBrush}"
                                      VerticalAlignment="Center" />
                            <ItemsControl ItemsSource="{Binding PackageInfoItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Padding="8" CornerRadius="4" 
                                                Background="{DynamicResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{Binding StatusColor}"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <ui:SymbolIcon Symbol="{Binding Icon}" Margin="0,0,4,0" />
                                                    <TextBlock Text="{Binding Label}" FontSize="12" 
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </StackPanel>
                                                <TextBlock>
                                                    <Run Text="{Binding Value}" FontSize="16" FontWeight="SemiBold" />
                                                    <Run Text="{Binding Unit, Mode=OneWay}" FontSize="12" 
                                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </TextBlock>
                                                <TextBlock Text="{Binding Description}" FontSize="11" 
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap" Margin="0,4,0,0" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Statistics -->
                    <Border BorderBrush="{DynamicResource TextControlBorderBrush}" BorderThickness="1" CornerRadius="4" 
                            Margin="0,0,0,20" Padding="10" Background="{DynamicResource LayerFillColorDefaultBrush}">
                        <StackPanel>
                            <TextBlock Text="{lex:Loc Label_Statistics}"
                                      Margin="8,0,0,0"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource AccentBrush}"
                                      VerticalAlignment="Center" />
                            <ItemsControl ItemsSource="{Binding StatisticsItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" Rows="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Padding="8" CornerRadius="4" 
                                                Background="{DynamicResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{Binding StatusColor}"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <ui:SymbolIcon Symbol="{Binding Icon}" Margin="0,0,4,0" />
                                                    <TextBlock Text="{Binding Label}" FontSize="12" 
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </StackPanel>
                                                <TextBlock>
                                                    <Run Text="{Binding Value}" FontSize="16" FontWeight="SemiBold" />
                                                    <Run Text="{Binding Unit, Mode=OneWay}" FontSize="12" 
                                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </TextBlock>
                                                <TextBlock Text="{Binding Description}" FontSize="11" 
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap" Margin="0,4,0,0" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </hc:Card>

            <!-- Right Panel -->
            <hc:Card Grid.Column="1" Margin="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{lex:Loc Label_ChuteMonitoring}"
                              Margin="8,0,0,0"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource AccentBrush}"
                              VerticalAlignment="Center" />
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Chutes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="10" Rows="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="100" Height="70" Background="{Binding StatusColor, FallbackValue=WhiteSmoke}"
                                            CornerRadius="12" Padding="6" Margin="6,6,6,6" Effect="{StaticResource CardDropShadowEffect}"
                                            Cursor="Hand">
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="MouseLeftButtonUp">
                                                <prism:InvokeCommandAction Command="{Binding DataContext.ShowChutePackagesCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                         CommandParameter="{Binding}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="#FFB0BEC5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorLight1}"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsTargetChute}" Value="True">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorDark1}"/>
                                                        <Setter Property="BorderThickness" Value="2.5"/>
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Color="{DynamicResource SystemAccentColor}" Opacity="0.2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsErrorState}" Value="True">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemFillColorCritical}"/>
                                                        <Setter Property="BorderThickness" Value="2.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding ChuteNumber}" FontSize="22" FontWeight="Bold"
                                                           HorizontalAlignment="Center" Foreground="#222" />
                                                <TextBlock Text="{Binding Quantity, FallbackValue='0/0'}" FontSize="12"
                                                           HorizontalAlignment="Center" Foreground="#888" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </hc:Card>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Opacity="0.8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- CPU -->
                    <ColumnDefinition Width="Auto" /> <!-- Memory -->
                    <ColumnDefinition Width="Auto" /> <!-- Disks -->
                    <ColumnDefinition Width="*" />   <!-- Device Statuses -->
                    <ColumnDefinition Width="Auto" /> <!-- Uptime -->
                </Grid.ColumnDefinitions>

                <!-- CPU Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="DeviceEq24" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="{Binding SystemStatusObj.CpuUsage, StringFormat={x:Static lex:Loc Status_CPU}}"
                               VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Memory Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="Memory16" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="{Binding SystemStatusObj.MemoryUsage, StringFormat={x:Static lex:Loc Status_Memory}}"
                               VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Disk Status -->
                <ItemsControl Grid.Column="2" ItemsSource="{Binding SystemStatusObj.Disks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,0"
                                        Visibility="{Binding IsReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ui:SymbolIcon Symbol="HardDrive24" FontSize="14" Margin="0,0,4,0"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                <TextBlock VerticalAlignment="Center" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                    <Run Text=": " />
                                    <Run Text="{Binding UsagePercentage, StringFormat={}{0:F1}%, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Device Statuses -->
                <ItemsControl Grid.Column="3" ItemsSource="{Binding DeviceStatuses}" Margin="8,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <ui:SymbolIcon Symbol="{Binding Icon}" FontSize="14" Margin="0,0,4,0"
                                               Foreground="{Binding StatusColor}" />
                                <TextBlock VerticalAlignment="Center" FontSize="12">
                                    <Run Text="{Binding Name}"
                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <Run Text=": " Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <Run Text="{Binding Status}" Foreground="{Binding StatusColor}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Uptime -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="Timer24" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="{lex:Loc Status_Uptime}" />
                        <Run Text="{Binding SystemStatusObj.RunningTime, Mode=OneWay, StringFormat={}{0:hh\:mm\:ss}}" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Growl Panel -->
        <ui:Card Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Width="360" Height="Auto" Effect="{StaticResource CardDropShadowEffect}" Panel.ZIndex="1000">
            <StackPanel hc:Growl.GrowlParent="True" Orientation="Vertical" />
        </ui:Card>
    </Grid>
</ui:FluentWindow>