<ui:FluentWindow x:Class="ChileSowing.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:viewModels="clr-namespace:ChileSowing.ViewModels"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:lex="http://wpflocalizeextension.codeplex.com"
                 xmlns:local="clr-namespace:ChileSowing.Views.UserControls"
                 lex:LocalizeDictionary.DesignCulture="en-US"
                 lex:ResxLocalizationProvider.DefaultAssembly="ChileSowing"
                 lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
                 Title="{lex:Loc Window_Title}"
                 WindowStartupLocation="CenterScreen">
    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ChileSowing;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />             <!-- Title Bar -->
            <RowDefinition Height="*" />             <!-- Main Content -->
            <RowDefinition Height="28" />             <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />   <!-- Logo -->
                <ColumnDefinition Width="Auto" />   <!-- Settings Button -->
                <ColumnDefinition Width="Auto" />   <!-- History Button -->
                <ColumnDefinition Width="Auto" />   <!-- Mode Switch -->
                <ColumnDefinition Width="*" />      <!-- Title (Center) -->
                <ColumnDefinition Width="Auto" />   <!-- Language Switcher -->
                <ColumnDefinition Width="Auto" />   <!-- TitleBar Controls -->
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Border Grid.Column="0" Width="48" Height="32">
                <Image Source="/logo.ico" Width="32" Height="32" Margin="8,0,8,0" 
                       VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="8" Color="#40000000" Direction="315" Opacity="0.6" ShadowDepth="2" />
                    </Image.Effect>
                </Image>
            </Border>

            <!-- Settings Button -->
            <ui:Button Grid.Column="1" Appearance="Primary" Command="{Binding OpenSettingsCommand}"
                       Margin="0,0,8,0" Padding="8,6" ToolTip="{lex:Loc Tooltip_Settings}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Settings24" Margin="0,0,8,0" />
                    <TextBlock Text="{lex:Loc Button_Settings}" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- History Button -->
            <ui:Button Grid.Column="2" Appearance="Primary" Command="{Binding ViewHistoryCommand}"
                       Margin="0,0,8,0" Padding="8,6" ToolTip="{lex:Loc Tooltip_History}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="History24" Margin="0,0,8,0" />
                    <TextBlock Text="{lex:Loc Button_History}" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- Mode Switch -->
            <Border Grid.Column="3" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                    CornerRadius="16" Margin="8,0,8,0" Padding="12,4"
                    ToolTip="{Binding CurrentModeDescription}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="TextEditStyle24" FontSize="16" Margin="0,0,8,0"
                                   Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{Binding CurrentModeText}" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold"
                               MinWidth="60"/>
                    <ui:ToggleSwitch IsChecked="{Binding IsTestMode, Mode=TwoWay}" 
                                     Margin="8,0,0,0" 
                                     ToolTip="{lex:Loc Tooltip_SwitchMode}"/>
                </StackPanel>
            </Border>
            
            <!-- Language Switcher -->
            <ComboBox Grid.Column="5" 
                      Name="LanguageComboBox" 
                      Width="80" 
                      Height="26"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="8,0,0,0"
                      SelectedIndex="0"
                      ToolTip="切换语言 / Switch Language"
                      SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="中文" Tag="zh-CN"/>
                <ComboBoxItem Content="English" Tag="en-US"/>
            </ComboBox>

            <!-- Title -->
            <TextBlock Grid.Column="4" Text="{lex:Loc Window_Title}" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,0,8,0" FontSize="20" FontFamily="Microsoft YaHei" FontWeight="SemiBold"
                       TextOptions.TextFormattingMode="Display" Foreground="black"
                       TextOptions.TextRenderingMode="ClearType">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.2" Direction="270" ShadowDepth="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- TitleBar Controls -->
            <ui:TitleBar Grid.Column="6" Title="" ShowMaximize="True" ShowMinimize="True" ShowClose="True" />

            <Border Grid.Column="0" Grid.ColumnSpan="7" Height="1" VerticalAlignment="Bottom"
                    Background="#20008080" BorderBrush="#40FFFFFF" BorderThickness="0,0,0,1" />
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Performance Monitor -->
                <RowDefinition Height="*" /> <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- Performance Monitor Panel -->
            <local:PerformanceMonitorPanel Grid.Row="0" DataContext="{Binding}" />

            <!-- Main Content Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!-- Left Panel -->
                    <ColumnDefinition Width="3*" /> <!-- Right Panel -->
                </Grid.ColumnDefinitions>

                <!-- Left Panel - 输入面板 -->
                <local:InputPanel Grid.Column="0" DataContext="{Binding}" />

                <!-- Right Panel - 格口监控面板 -->
                <local:ChuteMonitorPanel Grid.Column="1" DataContext="{Binding}" />
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Opacity="0.8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- CPU -->
                    <ColumnDefinition Width="Auto" /> <!-- Memory -->
                    <ColumnDefinition Width="Auto" /> <!-- Disks -->
                    <ColumnDefinition Width="*" />   <!-- Device Statuses -->
                    <ColumnDefinition Width="Auto" /> <!-- Uptime -->
                </Grid.ColumnDefinitions>

                <!-- CPU Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="DeviceEq24" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="{lex:Loc Status_CPU}" />
                        <Run Text="{Binding SystemStatusObj.CpuUsage, Mode=OneWay, StringFormat={}{0:F1}%}" />
                    </TextBlock>
                </StackPanel>

                <!-- Memory Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="Memory16" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="{lex:Loc Status_Memory}" />
                        <Run Text="{Binding SystemStatusObj.MemoryUsage, Mode=OneWay, StringFormat={}{0:F1}%}" />
                    </TextBlock>
                </StackPanel>

                <!-- Disk Status -->
                <ItemsControl Grid.Column="2" ItemsSource="{Binding SystemStatusObj.Disks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,0"
                                        Visibility="{Binding IsReady, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ui:SymbolIcon Symbol="HardDrive24" FontSize="14" Margin="0,0,4,0"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                <TextBlock VerticalAlignment="Center" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                    <Run Text=": " />
                                    <Run Text="{Binding UsagePercentage, Mode=OneWay, StringFormat={}{0:F1}%}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Device Statuses -->
                <ItemsControl Grid.Column="3" 
                             ItemsSource="{Binding DeviceStatuses}" 
                             ItemTemplate="{StaticResource DeviceStatusTemplate}"
                             Margin="8,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Uptime -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0">
                    <ui:SymbolIcon Symbol="Timer24" FontSize="14" Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock VerticalAlignment="Center" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="{lex:Loc Status_Uptime}" />
                        <Run Text="{Binding SystemStatusObj.RunningTime, Mode=OneWay, StringFormat={}{0:hh\:mm\:ss}}" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Growl Panel -->
        <ui:Card Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Width="360" Height="Auto" Effect="{StaticResource CardDropShadowEffect}" Panel.ZIndex="1000">
            <StackPanel hc:Growl.GrowlParent="True" Orientation="Vertical" />
        </ui:Card>
    </Grid>
</ui:FluentWindow>