<UserControl x:Class="XinJuLi.Views.Settings.AsnHttpSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:XinJuLi.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             d:DataContext="{d:DesignInstance Type=viewModels:AsnHttpSettingsViewModel}"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel MaxWidth="500" Margin="16" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="ASN HTTP服务设置" 
                       Style="{DynamicResource SubtitleTextBlockStyle}" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <CheckBox Content="启用ASN HTTP服务" 
                      IsChecked="{Binding Settings.IsEnabled}"
                      Margin="0,0,0,16"/>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="系统编码：" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}" 
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.SystemCode}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="仓库编码：" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}" 
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.HouseCode}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="服务监听地址：" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}" 
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.HttpServerUrl}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="应用名称：" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}" 
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.ApplicationName}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="复核服务器地址：" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}" 
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.ReviewServerUrl}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="复核月台："
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}"
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.ReviewExitArea}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <!-- 请求转发配置区域 -->
            <Separator Margin="0,20,0,16"/>
            
            <TextBlock Text="请求转发设置" 
                       Style="{DynamicResource CaptionTextBlockStyle}" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <CheckBox Content="启用请求转发" 
                      IsChecked="{Binding Settings.EnableForwarding}"
                      Margin="0,0,0,16"/>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="转发服务器地址："
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}"
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.ForwardServerUrl}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"
                            PlaceholderText="如：http://192.168.1.100:8080"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="转发应用名称："
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}"
                           Margin="0,0,8,0"/>
                <ui:TextBox Text="{Binding Settings.ForwardApplicationName}"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            MinWidth="200"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="转发超时时间："
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource TextBlockSubTitle}"
                           Margin="0,0,8,0"/>
                <ui:NumberBox Value="{Binding Settings.ForwardTimeoutSeconds}"
                              Grid.Column="1"
                              Margin="0,0,0,0"
                              MinWidth="200"
                              Minimum="1"
                              Maximum="300"
                              PlaceholderText="秒"/>
            </Grid>

            <CheckBox Content="转发失败时继续本地处理" 
                      IsChecked="{Binding Settings.ContinueOnForwardFailure}"
                      Margin="0,8,0,16"/>
        </StackPanel>
    </Grid>
</UserControl> 