<UserControl x:Class="XinJuLi.Views.Dialogs.AsnOrderSelectionDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:XinJuLi.ViewModels.Dialogs"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:converters1="clr-namespace:Common.Converters;assembly=Common"
             d:DataContext="{d:DesignInstance Type=viewModels:AsnOrderSelectionDialogViewModel}"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <converters1:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters1:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="选择要处理的ASN单" 
                       Style="{DynamicResource SubtitleTextBlockStyle}" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding NewAsnOrderCode, StringFormat='新收到：{0}'}"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource SystemAccentColorBrush}"
                       FontWeight="SemiBold"
                       Margin="0,4,0,0"
                       Visibility="{Binding NewAsnOrderCode, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>

        <!-- 搜索和操作栏 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 搜索框 -->
            <ui:TextBox Grid.Column="0" 
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="搜索订单号或车牌号..."
                        Icon="Search24"
                        Margin="0,0,8,0"/>

            <!-- 刷新按钮 -->
            <ui:Button Grid.Column="1" 
                       Content="刷新"
                       Command="{Binding RefreshCommand}"
                       Icon="ArrowClockwise24"
                       Margin="0,0,8,0"/>

            <!-- 移除按钮 -->
            <ui:Button Grid.Column="2" 
                       Content="移除选中"
                       Command="{Binding RemoveSelectedCommand}"
                       Icon="Delete24"
                       Appearance="Secondary"/>
        </Grid>

        <!-- ASN单列表 -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="4">
            <DataGrid ItemsSource="{Binding AsnOrders}"
                      SelectedItem="{Binding SelectedAsnOrder}"
                      AutoGenerateColumns="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single">
                
                <!-- 行样式，高亮新收到的ASN单 -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsNewReceived}" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource SystemAccentColor}" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="订单号" 
                                        Binding="{Binding OrderCode}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="订单名称" 
                                        Binding="{Binding OrderName}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="车牌号" 
                                        Binding="{Binding CarCode}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="货品数量" 
                                        Binding="{Binding Items.Count}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="订单类型" 
                                        Binding="{Binding OrderType}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="备注" 
                                        Binding="{Binding Remark}" 
                                        Width="*"/>
                </DataGrid.Columns>

                <!-- 双击行确认选择 -->
                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding ConfirmCommand}"/>
                </DataGrid.InputBindings>
            </DataGrid>
        </Border>

        <!-- 选中订单详情 -->
        <Border Grid.Row="3" 
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource LayerFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Visibility="{Binding SelectedAsnOrder, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="选中的ASN单详情：" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="订单号：" FontWeight="SemiBold" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedAsnOrder.OrderCode}" Margin="0,0,16,4"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="车牌号：" FontWeight="SemiBold" Margin="0,0,8,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedAsnOrder.CarCode}" Margin="0,0,0,4"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="货品数量：" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedAsnOrder.Items.Count}" Margin="0,0,16,0"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="订单类型：" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SelectedAsnOrder.OrderType}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <ui:Button Content="确认选择" 
                       Command="{Binding ConfirmCommand}"
                       Appearance="Primary"
                       Icon="Checkmark24"
                       Margin="0,0,8,0"/>
            
            <ui:Button Content="取消" 
                       Command="{Binding CancelCommand}"
                       Appearance="Secondary"
                       Icon="Dismiss24"/>
        </StackPanel>
    </Grid>
</UserControl> 