<Page x:Class="Presentation_BenFly.Views.Settings.ChuteSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:settings="clr-namespace:Presentation_BenFly.ViewModels.Settings"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=settings:ChuteSettingsViewModel}"
      Title="格口设置">

    <ScrollViewer>
        <StackPanel MaxWidth="800" Margin="16">
            <TextBlock Text="格口设置"
                      Style="{DynamicResource SubtitleTextBlockStyle}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,16" />

            <!-- 格口设置 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="基本设置"
                              Style="{DynamicResource SubtitleTextBlockStyle}"
                              Margin="0,0,0,16" />

                    <!-- 异常格口 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="异常格口："
                                  Grid.Column="0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                   Text="{Binding Configuration.ExceptionChute, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="1-999"
                                   Width="120"
                                   HorizontalAlignment="Left" />
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- 格口规则 -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="格口规则"
                              Style="{DynamicResource SubtitleTextBlockStyle}"
                              Margin="0,0,0,16" />

                    <!-- 工具栏 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ui:Button MinWidth="80" Command="{Binding AddRuleCommand}" Content="添加规则">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Add24" />
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button Margin="8,0" MinWidth="80" Command="{Binding ImportExcelCommand}" Content="导入Excel">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowImport24" />
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button MinWidth="80" Command="{Binding ExportExcelCommand}" Content="导出Excel">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowExport24" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>

                    <!-- 规则列表 -->
                    <ui:ListView ItemsSource="{Binding Configuration.Rules}">
                        <ui:ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                                <Setter Property="Padding" Value="8,4" />
                                <Setter Property="Height" Value="32" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </ui:ListView.Resources>
                        <ui:ListView.View>
                            <GridView>
                                <GridViewColumn Header="格口号" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:TextBox Text="{Binding Chute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="60"
                                                       PlaceholderText="1-999" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="一段码" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:TextBox Text="{Binding FirstSegment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Width="100" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="二段码" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:TextBox Text="{Binding SecondSegment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Width="200" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="三段码" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:TextBox Text="{Binding ThirdSegment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Width="100" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="操作" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:Button Appearance="Danger"
                                                      Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                      CommandParameter="{Binding}">
                                                <ui:SymbolIcon Symbol="Delete24" />
                                            </ui:Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ui:ListView.View>
                    </ui:ListView>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page> 