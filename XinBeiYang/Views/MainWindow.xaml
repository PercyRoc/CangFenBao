<ui:FluentWindow x:Class="XinBeiYang.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:viewModels1="clr-namespace:XinBeiYang.ViewModels"
                 xmlns:converters="clr-namespace:XinBeiYang.Converters"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModels1:MainWindowViewModel}"
                 Title="仓分宝-新北洋"
                 Height="900"
                 Width="1600"
                 WindowStartupLocation="CenterScreen"
                 Closing="MainWindow_Closing"
                 Loaded="MainWindow_Loaded"
                 ExtendsContentIntoTitleBar="False">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/DataGridStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <!-- 自定义转换器 -->
            <converters:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" />
            <converters:ProgressToAngleConverter x:Key="ProgressToAngleConverter" />
            <!-- 默认图像资源 -->
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Background="{StaticResource TitleBarGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 应用图标 -->
            <Border Grid.Column="0"
                    Width="48"
                    Height="32"
                    Effect="{StaticResource IconGlowEffect}">
                <Image Source="/logo.ico"
                       Width="32"
                       Height="32"
                       Margin="8,0,8,0"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="8"
                                          Color="#40000000"
                                          Direction="315"
                                          Opacity="0.6"
                                          ShadowDepth="2" />
                    </Image.Effect>
                </Image>
            </Border>

            <!-- 系统设置按钮 -->
            <ui:Button Grid.Column="1"
                       Appearance="Primary"
                       Command="{Binding OpenSettingsCommand}"
                       Margin="0,0,8,0"
                       Padding="8,6"
                       ToolTip="系统设置">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Settings24" Margin="0,0,8,0" />
                    <TextBlock Text="系统设置" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>

            <!-- 条码模式选择区 -->
            <Border Grid.Column="2"
                    Margin="0,0,8,0"
                    CornerRadius="4"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 条码模式标签 -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="8,0,4,0"
                                VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="BarcodeScanner24"
                                       FontSize="16"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center" />
                        <TextBlock Text="条码模式:"
                                   VerticalAlignment="Center"
                                   FontSize="12" />
                    </StackPanel>

                    <!-- 条码模式下拉菜单 - 改用ComboBox -->
                    <ComboBox Grid.Column="1"
                              Margin="0,2,4,2"
                              Padding="8,4"
                              MinWidth="80"
                              FontSize="12"
                              SelectedIndex="{Binding SelectedBarcodeModeIndex, Mode=TwoWay}"
                              VerticalAlignment="Center">
                        <ComboBoxItem Content="多条码" />
                        <ComboBoxItem Content="母条码" />
                        <ComboBoxItem Content="子条码" />
                    </ComboBox>
                </Grid>
            </Border>

            <!-- 标题 -->
            <TextBlock Grid.Column="3"
                       Text="仓分宝-新北洋"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       FontSize="20"
                       FontFamily="微软雅黑"
                       FontWeight="SemiBold"
                       TextOptions.TextFormattingMode="Display"
                       Foreground="black"
                       TextOptions.TextRenderingMode="ClearType">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4"
                                      Opacity="0.2"
                                      Direction="270"
                                      ShadowDepth="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- TitleBar -->
            <ui:TitleBar Grid.Column="4"
                         Title=""
                         ButtonsForeground="#FF008891"
                         ShowMaximize="True"
                         ShowMinimize="True"
                         ShowClose="True" />

            <Border Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Height="1"
                    VerticalAlignment="Bottom"
                    Background="#20008080"
                    BorderBrush="#40FFFFFF"
                    BorderThickness="0,0,0,1" />
        </Grid>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="1" Background="{Binding MainWindowBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧面板 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 实时包裹信息 -->
                <Border Grid.Row="0"
                        Margin="16">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <DockPanel Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Backpack24"
                                               Width="24"
                                               Height="24"
                                               Foreground="{DynamicResource AccentBrush}"
                                               VerticalAlignment="Center" />
                                <TextBlock Text="实时包裹信息"
                                           Margin="8,0,0,0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>

                        <!-- 条码信息 -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,16">
                            <TextBlock Text="条码"
                                       Margin="0,0,0,8"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}" />

                            <ui:TextBox Icon="Barcode24"
                                        Text="{Binding CurrentBarcode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsReadOnly="True"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource AccentBrush}"
                                        PlaceholderText="等待扫描..." />
                        </StackPanel>

                        <!-- 信息卡片网格 -->
                        <ItemsControl Grid.Row="2" ItemsSource="{Binding PackageInfoItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4"
                                            Height="90"
                                            CornerRadius="8"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!-- 标题和图标 -->
                                            <DockPanel Grid.Row="0" Margin="12,8,12,0">
                                                <TextBlock Text="{Binding Label}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                <Border CornerRadius="4"
                                                        Width="24"
                                                        Height="24"
                                                        HorizontalAlignment="Right">
                                                    <ui:SymbolIcon Symbol="{Binding Icon}"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                </Border>
                                            </DockPanel>

                                            <!-- 值和单位 -->
                                            <StackPanel Grid.Row="1"
                                                        Margin="12,4,12,8"
                                                        VerticalAlignment="Center">
                                                <DockPanel>
                                                    <TextBlock Text="{Binding Value}"
                                                               FontSize="24"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Unit}"
                                                               FontSize="12"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Bottom"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </DockPanel>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Margin="0,4,0,0"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- New Indicator Border -->
                <Border Grid.Row="1"
                        Margin="16,8,16,8"
                        Background="#E3F2FD"
                        BorderBrush="#2196F3"
                        BorderThickness="2"
                        CornerRadius="4"
                        Padding="16,8"
                        Visibility="{Binding IsNextPackageWaiting, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="ArrowCircleRight24" Foreground="#0D47A1" Margin="0,0,8,0" FontSize="20" />
                        <TextBlock Text="下一包裹等待处理"
                                   Foreground="#0D47A1"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- 统计信息区域 -->
                <Border Grid.Row="2" Margin="16"
                        Style="{StaticResource CardStyle}">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <DockPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ChartMultiple24"
                                               Width="24"
                                               Height="24"
                                               Foreground="{DynamicResource AccentBrush}"
                                               VerticalAlignment="Center" />
                                <TextBlock Text="统计信息"
                                           Margin="8,0,0,0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>

                        <!-- 统计卡片网格 -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding StatisticsItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4"
                                            Height="100"
                                            CornerRadius="8"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- 标题和图标 -->
                                            <DockPanel Grid.Row="0" Margin="12,8,12,0">
                                                <TextBlock Text="{Binding Label}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                <Border CornerRadius="4"
                                                        Width="24"
                                                        Height="24"
                                                        HorizontalAlignment="Right">
                                                    <ui:SymbolIcon Symbol="{Binding Icon}"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                </Border>
                                            </DockPanel>

                                            <!-- 值和单位 -->
                                            <StackPanel Grid.Row="1"
                                                        Margin="12,4,12,4"
                                                        VerticalAlignment="Center">
                                                <DockPanel>
                                                    <TextBlock Text="{Binding Value}"
                                                               FontSize="28"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Unit}"
                                                               FontSize="12"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Bottom"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </DockPanel>
                                            </StackPanel>

                                            <!-- 描述 -->
                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding Description}"
                                                       FontSize="11"
                                                       Margin="12,0,12,8"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="Wrap" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- PLC设备状态卡片 -->
                <Border Grid.Row="3" Margin="16,0,16,16"
                        Style="{StaticResource CardStyle}">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <DockPanel Grid.Row="0" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="DeveloperBoard24"
                                               Width="24"
                                               Height="24"
                                               Foreground="{DynamicResource AccentBrush}"
                                               VerticalAlignment="Center" />
                                <TextBlock Text="设备状态"
                                           Margin="8,0,0,0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>

                        <!-- 设备状态内容 -->
                        <Grid Grid.Row="1" Margin="0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- PLC状态 -->
                            <Border Grid.Row="0"
                                    Padding="16,12"
                                    CornerRadius="8"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{Binding PlcStatusColor, FallbackValue=#4CAF50}"
                                    BorderThickness="2"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 状态和图标 -->
                                    <DockPanel Grid.Row="0">
                                        <ui:SymbolIcon Symbol="Warning24"
                                                       Foreground="{Binding PlcStatusColor, FallbackValue=#4CAF50}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Width="24"
                                                       Height="24"
                                                       Margin="0,0,0,0"
                                                       DockPanel.Dock="Right" />
                                        <TextBlock Text="{Binding PlcStatusText, FallbackValue=正常}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="{Binding PlcStatusColor, FallbackValue=#4CAF50}"
                                                   VerticalAlignment="Center" />
                                    </DockPanel>

                                    <!-- 详细状态描述 -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding PlcStatusDescription, FallbackValue=设备运行正常，可以扫码上包}"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </Grid>
                            </Border>

                            <!-- JD WCS状态 -->
                            <Border Grid.Row="1"
                                    Padding="16,12"
                                    CornerRadius="8"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{Binding JdWcsStatusColor, FallbackValue=#4CAF50}"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 状态和图标 -->
                                    <DockPanel Grid.Row="0">
                                        <ui:SymbolIcon Symbol="CloudSync24"
                                                       Foreground="{Binding JdWcsStatusColor, FallbackValue=#4CAF50}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       Width="24"
                                                       Height="24"
                                                       Margin="0,0,0,0"
                                                       DockPanel.Dock="Right" />
                                        <TextBlock Text="{Binding JdWcsStatusText, FallbackValue=已连接}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="{Binding JdWcsStatusColor, FallbackValue=#4CAF50}"
                                                   VerticalAlignment="Center" />
                                    </DockPanel>

                                    <!-- 详细状态描述 -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding JdWcsStatusDescription, FallbackValue=京东WCS服务连接正常，可以上传数据}"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- 右侧面板 -->
            <Grid Grid.Row="0" Grid.Column="1" Margin="16,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 图片显示区域 -->
                <Border Grid.Row="0"
                        Style="{StaticResource CardStyle}"
                        Margin="16">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="Image24"
                                           Margin="0,0,8,0"
                                           Foreground="{StaticResource AccentBrush}"
                                           VerticalAlignment="Center" />
                            <TextBlock Text="相机监控"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 相机图像显示区 - 动态布局 -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Cameras}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- 使用 UniformGrid 并绑定行数和列数 -->
                                    <UniformGrid Rows="{Binding GridRows}" Columns="{Binding GridColumns}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <!-- ItemContainerStyle 已移除，UniformGrid 会自动布局 -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Margin="4"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!-- 相机名称 -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding CameraName}"
                                                       FontWeight="SemiBold"
                                                       Margin="8,4"
                                                       HorizontalAlignment="Center" />

                                            <!-- 相机图像 -->
                                            <Image Grid.Row="1"
                                                   Source="{Binding CurrentImage}"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   RenderOptions.EdgeMode="Aliased"
                                                   Stretch="Fill"
                                                   StretchDirection="Both"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="8" />

                                            <!-- 等待连接状态覆盖层 -->
                                            <Border Grid.Row="1"
                                                    Background="#80000000"
                                                    Visibility="{Binding IsOnline, Converter={StaticResource InvertBooleanToVisibilityConverter}}">
                                                <TextBlock Text="等待连接..."
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- 历史包裹信息 -->
                <Border Grid.Row="1" Margin="16"
                        Style="{StaticResource CardStyle}">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="History24"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource AccentBrush}" />
                            <TextBlock Text="历史包裹信息"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 数据表格 -->
                        <DataGrid Grid.Row="1"
                                  Style="{DynamicResource DefaultDataGridStyle}"
                                  ColumnHeaderStyle="{DynamicResource DefaultDataGridColumnHeaderStyle}"
                                  CellStyle="{DynamicResource DefaultDataGridCellStyle}"
                                  RowStyle="{DynamicResource DefaultDataGridRowStyle}"
                                  ItemsSource="{Binding PackageHistory}"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="序号" Binding="{Binding Index}" Width="60" />
                                <DataGridTextColumn Header="条码" Binding="{Binding Barcode}" Width="160" />
                                <DataGridTextColumn Header="重量" Binding="{Binding WeightDisplay}" Width="80" />
                                <DataGridTextColumn Header="尺寸（cm）" Binding="{Binding VolumeDisplay}" Width="200" />
                                <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="*" />
                                <DataGridTextColumn Header="时间"
                                                    Binding="{Binding CreateTime, StringFormat={}{0:HH:mm:ss}}"
                                                    Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- PLC拒绝警告覆盖层 -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="#AA000000"
                    Visibility="{Binding IsPlcRejectWarningVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                    Panel.ZIndex="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="ErrorCircle48" Foreground="Red" FontSize="80" Margin="0,0,0,20" />
                    <TextBlock Text="PLC 上包拒绝！"
                               Foreground="White"
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    <TextBlock Text="请勿放置新包裹！"
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- PLC异常状态警告覆盖层 -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="#AA333300"
                    Visibility="{Binding IsPlcAbnormalWarningVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                    Panel.ZIndex="9">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Warning24" Foreground="Yellow" FontSize="80" Margin="0,0,0,20" />
                    <TextBlock Text="PLC 状态异常！"
                               Foreground="White"
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    <TextBlock Text="当前状态: "
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding DeviceStatusText}"
                               Foreground="Yellow"
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,10" />
                    <TextBlock Text="包裹处理已暂停，请等待状态恢复正常..."
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- 上包倒计时覆盖层 -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="#88000000"
                    Visibility="{Binding IsUploadCountdownVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                    Panel.ZIndex="8"> <!-- Lower ZIndex than warnings -->
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="{Binding UploadCountdownValue}"
                               Foreground="LimeGreen"
                               FontWeight="Bold"
                               Margin="20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="5" Opacity="0.8" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Viewbox>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2"
                Background="{StaticResource SecondaryBrush}"
                Opacity="0.8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- CPU状态 -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="8,0">
                    <ui:SymbolIcon Symbol="DeviceEq24"
                                   FontSize="14"
                                   Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="{Binding SystemStatus.CpuUsage, StringFormat=CPU: {0:F1}%}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- 内存状态 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="8,0">
                    <ui:SymbolIcon Symbol="Memory16"
                                   FontSize="14"
                                   Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="{Binding SystemStatus.MemoryUsage, StringFormat=内存: {0:F1}%}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- 硬盘状态 -->
                <ItemsControl Grid.Column="2"
                              ItemsSource="{Binding SystemStatus.Disks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="8,0"
                                        Visibility="{Binding IsReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ui:SymbolIcon Symbol="HardDrive24"
                                               FontSize="14"
                                               Margin="0,0,4,0"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                <TextBlock VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                    <Run Text=": " />
                                    <Run Text="{Binding UsagePercentage, StringFormat={}{0:F1}%, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 设备状态 -->
                <ItemsControl Grid.Column="4"
                              ItemsSource="{Binding DeviceStatuses}"
                              Margin="8,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="8,0">
                                <ui:SymbolIcon Symbol="{Binding Icon}"
                                               FontSize="14"
                                               Margin="0,0,4,0"
                                               Foreground="{Binding StatusColor}" />
                                <TextBlock VerticalAlignment="Center"
                                           FontSize="12">
                                    <Run Text="{Binding Name}"
                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <Run Text=": "
                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <Run Text="{Binding Status}"
                                         Foreground="{Binding StatusColor}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 运行时间 -->
                <StackPanel Grid.Column="5"
                            Orientation="Horizontal"
                            Margin="8,0">
                    <ui:SymbolIcon Symbol="Timer24"
                                   FontSize="14"
                                   Margin="0,0,4,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="运行时间: " />
                        <Run Text="{Binding SystemStatus.RunningTime, Mode=OneWay, StringFormat={}{0:hh\\:mm\\:ss}}" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Growl消息容器 -->
        <StackPanel Name="GrowlPanel"
                    Grid.Row="1"
                    hc:Growl.GrowlParent="True"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    Panel.ZIndex="1000" />

        <!-- 倒计时遮罩层 -->
        <Grid Grid.Row="1"
              Background="#80000000"
              Visibility="{Binding IsWaitingForUploadResult, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="2000">
            <Border Background="#F5F5F5"
                    CornerRadius="12"
                    Padding="40,30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Color="#40000000"
                                      Direction="270"
                                      Opacity="0.3"
                                      ShadowDepth="8" />
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <!-- 标题 -->
                    <TextBlock Text="等待PLC上包确认"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20" />

                    <!-- 倒计时圆环 -->
                    <Grid Width="120" Height="120" Margin="0,0,0,20">
                        <!-- 背景圆环 -->
                        <Ellipse Stroke="#E0E0E0"
                                 StrokeThickness="8"
                                 Fill="Transparent" />
                        
                        <!-- 进度圆环 -->
                        <ui:Arc Stroke="#2196F3"
                                StrokeThickness="8"
                                StartAngle="0"
                                EndAngle="{Binding WaitingCountdownProgress, Converter={StaticResource ProgressToAngleConverter}}"
                                Width="104"
                                Height="104" />
                        
                        <!-- 倒计时数字 -->
                        <TextBlock Text="{Binding WaitingCountdownSeconds}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>

                    <!-- 状态文本 -->
                    <TextBlock Text="{Binding WaitingStatusText}"
                               FontSize="16"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="300" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>