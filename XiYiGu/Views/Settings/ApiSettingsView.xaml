<Page x:Class="Presentation_XiYiGu.Views.Settings.ApiSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:settings="clr-namespace:Presentation_XiYiGu.ViewModels.Settings"
      xmlns:local="clr-namespace:Presentation_XiYiGu.Converters"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:ApiSettingsViewModel}"
      mc:Ignorable="d"
      Title="API设置">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/DataGridStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- 字符串到可见性转换器 -->
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            
            <!-- 反向字符串到可见性转换器 -->
            <local:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <StackPanel Margin="16" VerticalAlignment="Top">
        <TextBlock Text="API设置"
                   HorizontalAlignment="Center"
                   Style="{DynamicResource SubtitleTextBlockStyle}"
                   Margin="0,0,0,16" />

        <!-- API配置 -->
        <ui:Card>
            <StackPanel Margin="16">
                <TextBlock Text="API连接配置"
                           Style="{DynamicResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,16" />

                <!-- 基础URL -->
                <TextBlock Text="基础URL:" 
                           Style="{DynamicResource BodyStrong}"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding ApiSettings.BaseUrl}" Margin="0,0,0,16"/>

                <!-- AES密钥 -->
                <TextBlock Text="AES密钥:" 
                           Style="{DynamicResource BodyStrong}"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding ApiSettings.AesKey}" Margin="0,0,0,16"/>

                <!-- 设备编号 -->
                <TextBlock Text="设备编号:" 
                           Style="{DynamicResource BodyStrong}"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding ApiSettings.MachineMx}" Margin="0,0,0,16"/>
            </StackPanel>
        </ui:Card>
        
        <!-- 测试上传 -->
        <ui:Card Margin="0,16,0,0">
            <StackPanel Margin="16">
                <TextBlock Text="测试上传"
                           Style="{DynamicResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,16" />
                
                <!-- 测试数量 -->
                <TextBlock Text="测试数量:" 
                           Style="{DynamicResource BodyStrong}"
                           Margin="0,0,0,8"/>
                <ui:NumberBox Value="{Binding TestCount}" 
                             Minimum="1" 
                             Maximum="100" 
                             Margin="0,0,0,16"/>
                
                <!-- 测试按钮 -->
                <ui:Button Content="批量测试上传" 
                           Command="{Binding TestUploadCommand}"
                           HorizontalAlignment="Center"
                           Appearance="Primary"
                           Icon="{ui:SymbolIcon ArrowUpload24}"/>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page> 