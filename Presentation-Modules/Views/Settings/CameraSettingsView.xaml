<Page x:Class="Presentation_Modules.Views.Settings.CameraSettingsView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:converters="clr-namespace:Presentation_CommonLibrary.Converters;assembly=Presentation-CommonLibrary"
      xmlns:settings="clr-namespace:Presentation_Modules.ViewModels.Settings"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:CameraSettingsViewModel}"
      mc:Ignorable="d"
      Title="相机设置">
  <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/DataGridStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock Text="相机设置"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="0,0,0,16" />

            <!-- 相机配置 -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="相机选择"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 顶部配置区域 -->
                    <WrapPanel Margin="0,0,0,16">
                        <!-- 相机厂商选择 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="相机厂商："
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <ComboBox Width="120"
                                      ItemsSource="{Binding Manufacturers}"
                                      SelectedItem="{Binding Configuration.Manufacturer}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- 相机类型选择 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="相机类型："
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <ComboBox Width="120"
                                      ItemsSource="{Binding CameraTypes}"
                                      SelectedItem="{Binding Configuration.CameraType}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- 枚举相机按钮 -->
                        <ui:Button Appearance="Secondary"
                                   Command="{Binding RefreshCameraListCommand}"
                                   IsEnabled="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Icon="ArrowClockwise24">
                            <TextBlock Text="枚举相机" />
                        </ui:Button>
                    </WrapPanel>

                    <!-- 相机列表 -->
                    <TextBlock Text="可用相机列表"
                               Style="{DynamicResource BodyStrong}"
                               Margin="0,0,0,8" />

                    <DataGrid ItemsSource="{Binding AvailableCameras}"
                              Style="{DynamicResource DefaultDataGridStyle}"
                              ColumnHeaderStyle="{DynamicResource DefaultDataGridColumnHeaderStyle}"
                              CellStyle="{DynamicResource DefaultDataGridCellStyle}"
                              RowStyle="{DynamicResource DefaultDataGridRowStyle}"
                              IsReadOnly="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Height="200"
                              Margin="0,0,0,16"
                              AlternationCount="2">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="选择"
                                                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="50" />
                            <DataGridTextColumn Header="序号" Binding="{Binding Index}" Width="60" IsReadOnly="True" />
                            <DataGridTextColumn Header="IP地址" Binding="{Binding IpAddress}" Width="120"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="MAC地址" Binding="{Binding MacAddress}" Width="150"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="序列号" Binding="{Binding SerialNumber}" Width="150"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="型号" Binding="{Binding Model}" Width="120" IsReadOnly="True" />
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ui:Card>

            <!-- 条码过滤配置 -->
            <ui:Card Margin="0,16,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="条码过滤配置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 启用条码重复过滤 -->
                    <ui:ToggleSwitch Content="启用条码重复过滤"
                                     IsChecked="{Binding Configuration.BarcodeRepeatFilterEnabled}"
                                     Margin="0,0,0,16" />

                    <!-- 重复次数和时间设置 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="重复次数："
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <ui:NumberBox Grid.Column="1"
                                      ClearButtonEnabled="False"
                                      Value="{Binding Configuration.RepeatCount}"
                                      IsEnabled="{Binding Configuration.BarcodeRepeatFilterEnabled}" />

                        <TextBlock Grid.Column="2"
                                   Text="重复时间(ms)："
                                   VerticalAlignment="Center"
                                   Margin="16,0,8,0" />
                        <ui:NumberBox Grid.Column="3"
                                      ClearButtonEnabled="False"
                                      Value="{Binding Configuration.RepeatTimeMs}"
                                      IsEnabled="{Binding Configuration.BarcodeRepeatFilterEnabled}" />
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>
