<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>logo.ico</ApplicationIcon>
        <RootNamespace>XinBa</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Camera\相机模块.csproj"/>
        <ProjectReference Include="..\Common\基础模块.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <!-- Prism -->
        <PackageReference Include="Prism.Wpf"/>

        <!-- Serilog -->
        <PackageReference Include="Serilog"/>
        <PackageReference Include="Serilog.Sinks.Console"/>
        <PackageReference Include="Serilog.Sinks.File"/>
        <PackageReference Include="Serilog.Sinks.Debug"/>
        <PackageReference Include="Serilog.Extensions.Logging"/>
        <PackageReference Include="Serilog.Extensions.Hosting"/>
        <PackageReference Include="Serilog.Settings.Configuration"/>

        <!-- UI Framework -->
        <PackageReference Include="MahApps.Metro.IconPacks.Material"/>
        <PackageReference Include="Microsoft.Extensions.Http"/>
        <PackageReference Include="FluentFTP"/>
        <PackageReference Include="SixLabors.Fonts"/>
        <PackageReference Include="WPF-UI"/>
        <PackageReference Include="HandyControl"/>

        <!-- WebSocket -->
        <PackageReference Include="WebSocketSharp-netstandard"/>

        <!-- 添加 SixLabors.ImageSharp.Drawing 和 SixLabors.ImageSharp.Fonts 的引用 -->
        <PackageReference Include="SixLabors.ImageSharp"/>
        <PackageReference Include=" SixLabors.ImageSharp.Drawing"/>
    </ItemGroup>

    <ItemGroup>
        <Page Update="Views\SettingsDialog.xaml">
            <Generator>MSBuild:Compile</Generator>
            <XamlRuntime>Wpf</XamlRuntime>
            <SubType>Designer</SubType>
        </Page>
    </ItemGroup>
</Project>
