<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyTitle>TCP相机数据模拟器</AssemblyTitle>
    <AssemblyDescription>用于压测TCP相机服务性能的模拟客户端工具，支持PLC+相机协调模式</AssemblyDescription>
    <AssemblyVersion>2.1.0.0</AssemblyVersion>
    <FileVersion>2.1.0.0</FileVersion>
    <Product>CangFenBao TCP相机压测工具</Product>
    <Copyright>Copyright © 2024</Copyright>
    
    <!-- 默认发布配置：依赖运行时 -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <PublishTrimmed>false</PublishTrimmed>
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == ''">win-x64</RuntimeIdentifier>
    
    <!-- 优化设置 -->
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" />
    <PackageReference Include="Serilog.Sinks.Console" />
  </ItemGroup>

  <!-- 确保批处理脚本和README被复制到输出目录 -->
  <ItemGroup>
    <None Include="test-scripts.bat" CopyToOutputDirectory="Always" />
    <None Include="README.md" CopyToOutputDirectory="Always" />
  </ItemGroup>

</Project> 