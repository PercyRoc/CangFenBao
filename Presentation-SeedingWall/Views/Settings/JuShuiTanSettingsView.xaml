<Page x:Class="Presentation_SeedingWall.Views.Settings.JuShuiTanSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewModels="clr-namespace:Presentation_SeedingWall.ViewModels.Settings"
             d:DataContext="{d:DesignInstance Type=viewModels:JuShuiTanSettingsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="聚水潭WebSocket设置"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />
            <TextBlock Text="配置与聚水潭服务器的WebSocket通信参数"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,8,16,0">
                <!-- 服务器地址 -->
                <ui:CardControl Margin="0,0,0,16">
                    <ui:CardControl.Header>
                        <StackPanel>
                            <TextBlock Text="服务器连接"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="配置聚水潭WebSocket服务器连接参数"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </ui:CardControl.Header>

                    <StackPanel Margin="0,8,0,0">
                        <!-- 服务器地址 -->
                        <TextBlock Text="服务器地址"
                                   Margin="0,0,0,4"
                                   FontWeight="SemiBold" />
                        <ui:TextBox PlaceholderText="输入WebSocket服务器地址，例如：ws://localhost:8080"
                                    Text="{Binding Configuration.ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,16" />
                    </StackPanel>
                </ui:CardControl>

                <!-- 说明 -->
                <ui:InfoBar Title="通信说明"
                            Message="播种验货通过WebSocket与聚水潭服务器通信，请确保服务器地址正确且网络畅通。"
                            Severity="Informational"
                            IsOpen="True"
                            IsClosable="False"
                            Margin="0,0,0,16" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 