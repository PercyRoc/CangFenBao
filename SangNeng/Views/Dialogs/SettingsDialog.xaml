<ui:FluentWindow x:Class="Presentation_SangNeng.Views.Dialogs.SettingsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:dialogs="clr-namespace:Presentation_SangNeng.ViewModels.Dialogs"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:local="clr-namespace:Presentation_SangNeng.Views.Settings"
                 xmlns:settings="clr-namespace:SharedUI.Views.Settings;assembly=SharedUI"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=dialogs:SettingsDialogViewModel}"
                 Title="System Settings"
                 Height="720"
                 Width="1280"
                 WindowStartupLocation="CenterOwner"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStyle="SingleBorderWindow"
                 ShowInTaskbar="False">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource TitleBarGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- App Icon -->
            <Border Grid.Column="0"
                    Width="48"
                    Height="32"
                    Effect="{StaticResource IconGlowEffect}" />

            <!-- Title -->
            <TextBlock Grid.Column="1"
                       Text="System Settings"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       FontSize="20"
                       FontWeight="SemiBold"
                       TextOptions.TextFormattingMode="Display"
                       Foreground="black"
                       TextOptions.TextRenderingMode="ClearType">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4"
                                      Opacity="0.2"
                                      Direction="270"
                                      ShadowDepth="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- TitleBar -->
            <ui:TitleBar Grid.Column="2"
                         Title=""
                         ButtonsForeground="#FF008891"
                         ShowMaximize="True"
                         ShowMinimize="True"
                         ShowClose="True" />

            <Border Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Height="1"
                    VerticalAlignment="Bottom"
                    Background="#20008080"
                    BorderBrush="#40FFFFFF"
                    BorderThickness="0,0,0,1" />
        </Grid>

        <!-- Navigation Area -->
        <Border Grid.Row="1" Background="{StaticResource MainBackground}">
            <Grid>
                <ui:NavigationView IsPaneOpen="True"
                                   IsPaneVisible="True"
                                   PaneDisplayMode="Left"
                                   OpenPaneLength="200"
                                   Margin="0"
                                   Padding="0"
                                   FrameMargin="0"
                                   Name="RootNavigation">

                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Content="Camera Settings"
                                               Tag="Camera">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="Camera24" />
                            </ui:NavigationViewItem.Icon>
                            <ui:NavigationViewItem.TargetPageType>
                                <x:Type Type="settings:CameraSettingsView" />
                            </ui:NavigationViewItem.TargetPageType>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItem Content="Volume Settings"
                                               Tag="Volume">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="Cube24" />
                            </ui:NavigationViewItem.Icon>
                            <ui:NavigationViewItem.TargetPageType>
                                <x:Type Type="local:VolumeSettingsView" />
                            </ui:NavigationViewItem.TargetPageType>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItem Content="Weight Settings"
                                               Tag="Weight">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="Scales24" />
                            </ui:NavigationViewItem.Icon>
                            <ui:NavigationViewItem.TargetPageType>
                                <x:Type Type="local:WeightSettingsView" />
                            </ui:NavigationViewItem.TargetPageType>
                        </ui:NavigationViewItem>

                        <ui:NavigationViewItem Content="Pallet Settings"
                                               Tag="Tray">
                            <ui:NavigationViewItem.Icon>
                                <ui:SymbolIcon Symbol="BoxMultiple24" />
                            </ui:NavigationViewItem.Icon>
                            <ui:NavigationViewItem.TargetPageType>
                                <x:Type Type="local:PalletSettingsView" />
                            </ui:NavigationViewItem.TargetPageType>
                        </ui:NavigationViewItem>
                    </ui:NavigationView.MenuItems>
                </ui:NavigationView>

                <!-- Button Area -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="16">
                    <ui:Button Appearance="Primary"
                               Command="{Binding SaveCommand}"
                               Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save24" Margin="0,0,8,0" />
                            <TextBlock Text="Save" />
                        </StackPanel>
                    </ui:Button>
                    <ui:Button Appearance="Secondary"
                               Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Dismiss24" Margin="0,0,8,0" />
                            <TextBlock Text="Cancel" />
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Growl Message Container -->
        <StackPanel Name="GrowlPanel"
                    Grid.Row="1"
                    hc:Growl.GrowlParent="True"
                    hc:Growl.Token="SettingWindowGrowl"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    Panel.ZIndex="1000" />
    </Grid>
</ui:FluentWindow>