<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="CangFenBao_SangNeng.Views.Settings.CameraSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:settings="clr-namespace:CangFenBao_SangNeng.ViewModels.Settings"
      xmlns:converters="clr-namespace:Presentation_CommonLibrary.Converters;assembly=Presentation-CommonLibrary"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:CameraSettingsViewModel}"
      mc:Ignorable="d"
      Title="Camera Settings">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/DataGridStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock Text="Camera Settings"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="0,0,0,16" />

            <!-- Camera Configuration -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="Camera Selection"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- Top Configuration Area -->
                    <WrapPanel Margin="0,0,0,16">
                        <!-- Camera Manufacturer Selection -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="Manufacturer:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <ComboBox Width="120"
                                      ItemsSource="{Binding Manufacturers}"
                                      SelectedItem="{Binding SelectedManufacturer}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Camera Type Selection -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="Camera Type:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <ComboBox Width="120"
                                      ItemsSource="{Binding CameraTypes}"
                                      SelectedItem="{Binding SelectedCameraType}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Refresh Camera List Button -->
                        <ui:Button Appearance="Secondary"
                                   Command="{Binding RefreshCameraListCommand}"
                                   IsEnabled="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Icon="ArrowClockwise24">
                            <TextBlock Text="Refresh Cameras" />
                        </ui:Button>
                    </WrapPanel>

                    <!-- Camera List -->
                    <TextBlock Text="Available Cameras"
                               Style="{DynamicResource BodyStrong}"
                               Margin="0,0,0,8" />

                    <DataGrid ItemsSource="{Binding AvailableCameras}"
                              Style="{DynamicResource DefaultDataGridStyle}"
                              ColumnHeaderStyle="{DynamicResource DefaultDataGridColumnHeaderStyle}"
                              CellStyle="{DynamicResource DefaultDataGridCellStyle}"
                              RowStyle="{DynamicResource DefaultDataGridRowStyle}"
                              IsReadOnly="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Height="200"
                              Margin="0,0,0,16"
                              AlternationCount="2">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Select"
                                                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="50" />
                            <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="60" IsReadOnly="True" />
                            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="150"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="150"
                                                IsReadOnly="True" />
                            <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="120" IsReadOnly="True" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ui:Card>

            <!-- Barcode Filter Configuration -->
            <ui:Card Margin="0,16,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="Barcode Filter Configuration"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- Enable Barcode Repeat Filter -->
                    <ui:ToggleSwitch Content="Enable Barcode Repeat Filter"
                                     IsChecked="{Binding BarcodeRepeatFilterEnabled}"
                                     Margin="0,0,0,16" />

                    <!-- Repeat Count and Time Settings -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Repeat Count:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <ui:NumberBox Grid.Column="1"
                                      ClearButtonEnabled="False"
                                      Value="{Binding RepeatCount}"
                                      IsEnabled="{Binding BarcodeRepeatFilterEnabled}" />

                        <TextBlock Grid.Column="2"
                                   Text="Repeat Time(ms):"
                                   VerticalAlignment="Center"
                                   Margin="16,0,8,0" />
                        <ui:NumberBox Grid.Column="3"
                                      ClearButtonEnabled="False"
                                      Value="{Binding RepeatTimeMs}"
                                      IsEnabled="{Binding BarcodeRepeatFilterEnabled}" />
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Image Save Configuration -->
            <ui:Card Margin="0,16,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="Image Save Configuration"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- Enable Image Saving -->
                    <ui:ToggleSwitch Content="Enable Image Saving"
                                     IsChecked="{Binding EnableImageSaving}"
                                     Margin="0,0,0,16" />

                    <!-- Image Save Path -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Save Path:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding ImageSavePath}"
                                 IsReadOnly="True"
                                 IsEnabled="{Binding EnableImageSaving}" />
                        <ui:Button Grid.Column="2"
                                   Margin="8,0,0,0"
                                   Command="{Binding SelectImagePathCommand}"
                                   IsEnabled="{Binding EnableImageSaving}"
                                   Icon="FolderOpen24">
                            <TextBlock Text="Browse" />
                        </ui:Button>
                    </Grid>

                    <!-- Image Format -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Image Format:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <ComboBox Width="120"
                                  ItemsSource="{Binding ImageFormats}"
                                  SelectedItem="{Binding SelectedImageFormat}"
                                  IsEnabled="{Binding EnableImageSaving}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page> 