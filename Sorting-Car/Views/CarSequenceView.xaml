<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Sorting_Car.Views.CarSequenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com" 
             lex:LocalizeDictionary.DesignCulture="en" 
             lex:ResxLocalizationProvider.DefaultAssembly="Sorting_Car" 
             lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings" 
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:Sorting_Car.ViewModels"
             xmlns:converters="clr-namespace:SharedUI.Converters;assembly=SharedUI"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:CarSequenceViewModel}">
    <UserControl.Resources>
        <converters:BooleanToStringConverter x:Key="BooleanToDirectionConverter" 
                                          TrueValue="{lex:Loc SharedUI:Strings:CarSequence_Reverse}" 
                                          FalseValue="{lex:Loc SharedUI:Strings:CarSequence_Forward}"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧：格口列表 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="{lex:Loc SharedUI:Strings:CarSequence_ChuteListTitle}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding ChuteSequences}" 
                     SelectedItem="{Binding SelectedChute}"
                     DisplayMemberPath="ChuteNumber"
                     BorderThickness="1"
                     Margin="0,0,10,0"/>
        </Grid>
        
        <!-- 右侧：选中格口的小车序列 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="{lex:Loc SharedUI:Strings:CarSequence_ChuteSequenceTitle}"  
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <!-- 小车序列列表 -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding CarSequence}"
                     SelectedItem="{Binding SelectedCarItem}"
                     BorderThickness="1"
                     Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding CarName}"
                                       VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding IsReverse, Converter={StaticResource BooleanToDirectionConverter}}"
                                       Margin="10,0,10,0"
                                       VerticalAlignment="Center"/>
                            
                            <!-- 延迟时间输入 -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="{lex:Loc SharedUI:Strings:CarSequence_DelayLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding DelayMs, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="50" 
                                         VerticalAlignment="Center"
                                         ToolTip="{lex:Loc SharedUI:Strings:CarSequence_DelayTooltip}"/>
                                <TextBlock Text="{lex:Loc SharedUI:Strings:CarSequence_MsLabel}" VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="3" 
                                    Content="{lex:Loc SharedUI:Strings:Common_Delete}"
                                    Command="{Binding DataContext.RemoveCarCommand, 
                                              RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    Padding="5,2"
                                    Margin="0,2"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- 底部操作区 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                <!-- 设置方向按钮 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="{lex:Loc SharedUI:Strings:CarSequence_SetForwardButton}" 
                            Command="{Binding SetForwardCommand}"
                            Margin="0,0,5,0"
                            Padding="5,2"/>
                    <Button Content="{lex:Loc SharedUI:Strings:CarSequence_SetReverseButton}"
                            Command="{Binding SetReverseCommand}"
                            Margin="5,0,0,0"
                            Padding="5,2"/>
                </StackPanel>
                
                <!-- 添加小车区域 -->
                <StackPanel Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding AvailableCars}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Address"
                              Name="CarSelector"
                              Width="120"
                              Margin="0,0,5,0"/>
                    
                    <Button Content="{lex:Loc SharedUI:Strings:CarSequence_AddCarButton}"
                            Command="{Binding AddCarCommand}"
                            CommandParameter="{Binding SelectedItem, ElementName=CarSelector}"
                            Padding="5,2"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 