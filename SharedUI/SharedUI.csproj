<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <RootNamespace>SharedUI</RootNamespace>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <ImplicitUsings>enable</ImplicitUsings>
        <PackageId>SharedUI</PackageId>
    </PropertyGroup>

    <ItemGroup>
        <Resource Include="Resources\Icon\*.png"/>
        <Resource Include="Resources\Icon\*.ico"/>
        <Resource Include="Resources\Styles\**\*.xaml">
            <SubType>Designer</SubType>
            <Generator>MSBuild:Compile</Generator>
        </Resource>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="FluentFTP"/>
        <PackageReference Include="MahApps.Metro.IconPacks.Material"/>
        <PackageReference Include="Prism.Wpf"/>
        <PackageReference Include="WPF-UI"/>
        <PackageReference Include="HandyControl"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Resources\Styles\"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Common\Common.csproj"/>
        <ProjectReference Include="..\DeviceService\DeviceService.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Page Update="Views\Settings\CameraSettingsView.xaml">
            <Generator>MSBuild:Compile</Generator>
            <XamlRuntime>Wpf</XamlRuntime>
            <SubType>Designer</SubType>
        </Page>
    </ItemGroup>

</Project>
