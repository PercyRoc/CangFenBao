<UserControl x:Class="SharedUI.Views.Settings.FridSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:SharedUI.Converters"
             xmlns:settings="clr-namespace:SharedUI.ViewModels.Settings"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=settings:FridSettingsViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
            <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />

            <Style x:Key="InputContainerStyle" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>

            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,0,8,0" />
                <Setter Property="MinWidth" Value="120" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800"
                        Margin="16"
                        HorizontalAlignment="Center">
                <TextBlock Text="Frid设备设置"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16" />

                <!-- 基础设置 -->
                <ui:Card>
                    <StackPanel Margin="16">
                        <TextBlock Text="基础设置"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <!-- 启用开关 -->
                        <ui:ToggleSwitch Content="启用Frid设备"
                                         IsChecked="{Binding Configuration.IsEnabled}"
                                         Margin="0,0,0,16" />

                        <!-- 连接类型 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="连接类型:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding ConnectionTypes}"
                                      SelectedItem="{Binding Configuration.ConnectionType}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- 功率设置 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="功率设置:"
                                       Style="{StaticResource LabelStyle}" />
                            <ui:NumberBox Width="200"
                                          ClearButtonEnabled="False"
                                          Value="{Binding Configuration.Power, UpdateSourceTrigger=PropertyChanged}"
                                          Minimum="0"
                                          Maximum="100"
                                          PlaceholderText="输入功率值"
                                          ToolTip="设置Frid设备的功率（dBm）" />
                            <TextBlock Text="dBm"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- TCP连接设置 -->
                <ui:Card Margin="0,16,0,0">
                    <StackPanel Margin="16">
                        <TextBlock Text="TCP连接设置"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="IP地址:"
                                       Style="{StaticResource LabelStyle}" />
                            <ui:TextBox Width="200"
                                        Text="{Binding Configuration.TcpIpAddress, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="请输入IP地址"
                                        IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Tcp}" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="端口号:"
                                       Style="{StaticResource LabelStyle}" />
                            <ui:NumberBox Width="200"
                                          ClearButtonEnabled="False"
                                          Value="{Binding Configuration.TcpPort, UpdateSourceTrigger=PropertyChanged}"
                                          Minimum="1"
                                          Maximum="65535"
                                          PlaceholderText="请输入端口号"
                                          IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Tcp}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- 串口连接设置 -->
                <ui:Card Margin="0,16,0,0">
                    <StackPanel Margin="16">
                        <TextBlock Text="串口连接设置"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <!-- 串口选择 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="串口名称:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding AvailablePorts}"
                                      SelectedItem="{Binding Configuration.SerialPortName}"
                                      IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                            <ui:Button Appearance="Secondary"
                                       Icon="ArrowClockwise24"
                                       Content="刷新"
                                       Command="{Binding RefreshPortsCommand}"
                                       ToolTip="刷新可用串口"
                                       Padding="12,4"
                                       Margin="8,0,0,0"
                                       IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                        </StackPanel>

                        <!-- 波特率 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="波特率:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding AvailableBaudRates}"
                                      SelectedItem="{Binding Configuration.BaudRate}"
                                      IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                        </StackPanel>

                        <!-- 数据位 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="数据位:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding AvailableDataBits}"
                                      SelectedItem="{Binding Configuration.DataBits}"
                                      IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                        </StackPanel>

                        <!-- 停止位 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="停止位:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding AvailableStopBits}"
                                      SelectedItem="{Binding Configuration.StopBits}"
                                      IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                        </StackPanel>

                        <!-- 校验位 -->
                        <StackPanel Style="{StaticResource InputContainerStyle}">
                            <TextBlock Text="校验位:"
                                       Style="{StaticResource LabelStyle}" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding AvailableParity}"
                                      SelectedValue="{Binding Configuration.Parity}"
                                      SelectedValuePath="Value"
                                      DisplayMemberPath="Description"
                                      IsEnabled="{Binding Configuration.ConnectionType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SerialPort}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- 保存按钮 -->
                <ui:Button Margin="0,16,0,0"
                           Appearance="Primary"
                           Command="{Binding SaveConfigurationCommand}"
                           HorizontalAlignment="Center"
                           Padding="16,8">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" Margin="0,0,8,0" />
                        <TextBlock Text="保存配置" VerticalAlignment="Center" />
                    </StackPanel>
                </ui:Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>