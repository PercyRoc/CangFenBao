<Page x:Class="SharedUI.Views.Settings.ModulesTcpSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:settings="clr-namespace:SharedUI.ViewModels.Settings"
      xmlns:lex="http://wpflocalizeextension.codeplex.com"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=settings:ModulesTcpSettingsViewModel}"
      prism:ViewModelLocator.AutoWireViewModel="True">
    <Page.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- TCP地址 -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Address" />
        <ui:TextBox Grid.Row="0" Grid.Column="2"
                    Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                    Width="200" HorizontalAlignment="Left"
                    PlaceholderText="Enter address" />

        <!-- 端口号 -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Port" />
        <ui:TextBox Grid.Row="2" Grid.Column="2"
                    Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                    Width="100" HorizontalAlignment="Left"
                    PlaceholderText="Enter port" />

        <!-- 最小时间 -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Min Time" />
        <ui:TextBox Grid.Row="4" Grid.Column="2"
                    Text="{Binding MinTime, UpdateSourceTrigger=PropertyChanged}"
                    Width="100" HorizontalAlignment="Left"
                    PlaceholderText="Enter min time" />

        <!-- 最大时间 -->
        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Max Time" />
        <ui:TextBox Grid.Row="6" Grid.Column="2"
                    Text="{Binding MaxTime, UpdateSourceTrigger=PropertyChanged}"
                    Width="100" HorizontalAlignment="Left"
                    PlaceholderText="Enter max time" />

        <!-- 异常格口 -->
        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Exception Chute" />
        <ui:TextBox Grid.Row="8" Grid.Column="2"
                    Text="{Binding ExceptionChute, UpdateSourceTrigger=PropertyChanged}"
                    Width="100" HorizontalAlignment="Left"
                    PlaceholderText="Enter exception chute" />
    </Grid>
</Page>