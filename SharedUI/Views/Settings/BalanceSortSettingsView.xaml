<Page x:Class="SharedUI.Views.Settings.BalanceSortSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:settings="clr-namespace:SharedUI.ViewModels.Settings"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:BalanceSortSettingsViewModel}"
      mc:Ignorable="d"
      Title="分拣设置">

    <Grid>
        <StackPanel MaxWidth="500" Margin="16" VerticalAlignment="Top">
            <TextBlock Text="分拣设置"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16" />

            <!-- 触发光电配置 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="触发光电配置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- IP地址 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="IP地址："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Configuration.TriggerPhotoelectric.IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入IP地址" />
                    </Grid>

                    <!-- 端口号 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="端口号："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:NumberBox Grid.Column="1"
                                      ClearButtonEnabled="False"
                                      Width="120"
                                      HorizontalAlignment="Left"
                                      Value="{Binding Configuration.TriggerPhotoelectric.Port, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!-- 时间范围 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="触发时间范围："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.TriggerPhotoelectric.TimeRangeLower, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text=" - "
                                       Grid.Column="1"
                                       Margin="8,0"
                                       VerticalAlignment="Center" />

                            <ui:NumberBox Grid.Column="2"
                                          Width="120"
                                          ClearButtonEnabled="False"
                                          Value="{Binding Configuration.TriggerPhotoelectric.TimeRangeUpper, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="3"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

                    <!-- 分拣时间范围 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="分拣时间范围："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.TriggerPhotoelectric.SortingTimeRangeLower, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text=" - "
                                       Grid.Column="1"
                                       Margin="8,0"
                                       VerticalAlignment="Center" />

                            <ui:NumberBox Grid.Column="2"
                                          Width="120"
                                          ClearButtonEnabled="False"
                                          Value="{Binding Configuration.TriggerPhotoelectric.SortingTimeRangeUpper, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="3"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

                    <!-- 分拣延迟 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="分拣延迟："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.TriggerPhotoelectric.SortingDelay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

                    <!-- 回正延迟 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="回正延迟："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.TriggerPhotoelectric.ResetDelay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- 分拣光电配置 -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="分拣光电配置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button Grid.Column="1"
                                   Appearance="Primary"
                                   Command="{Binding AddPhotoelectricCommand}"
                                   Padding="8,6"
                                   ToolTip="添加光电">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Add24" Margin="0,0,8,0" />
                                <TextBlock Text="添加光电" VerticalAlignment="Center" />
                            </StackPanel>
                        </ui:Button>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding Configuration.SortingPhotoelectrics}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:Card Margin="0,0,0,8"
                                         Padding="16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- 名称 -->
                                        <TextBlock Text="名称："
                                                   Grid.Row="0"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <ui:TextBox Grid.Row="0"
                                                    Grid.Column="1"
                                                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                    PlaceholderText="请输入名称"
                                                    Margin="0,0,0,8" />

                                        <!-- IP地址 -->
                                        <TextBlock Text="IP地址："
                                                   Grid.Row="1"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <ui:TextBox Grid.Row="1"
                                                    Grid.Column="1"
                                                    Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                                    PlaceholderText="请输入IP地址"
                                                    Margin="0,0,0,8" />

                                        <!-- 端口号 -->
                                        <TextBlock Text="端口号："
                                                   Grid.Row="2"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <ui:NumberBox Grid.Row="2"
                                                      Grid.Column="1"
                                                      ClearButtonEnabled="False"
                                                      Width="120"
                                                      HorizontalAlignment="Left"
                                                      Value="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                                                      Margin="0,0,0,8" />

                                        <!-- 分拣延迟 -->
                                        <TextBlock Text="分拣延迟："
                                                   Grid.Row="3"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <ui:NumberBox Grid.Row="3"
                                                      Grid.Column="1"
                                                      ClearButtonEnabled="False"
                                                      Width="120"
                                                      HorizontalAlignment="Left"
                                                      Value="{Binding SortingDelay, UpdateSourceTrigger=PropertyChanged}"
                                                      Margin="0,0,0,8" />

                                        <!-- 回正延迟 -->
                                        <TextBlock Text="回正延迟："
                                                   Grid.Row="4"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <ui:NumberBox Grid.Row="4"
                                                      Grid.Column="1"
                                                      ClearButtonEnabled="False"
                                                      Width="120"
                                                      HorizontalAlignment="Left"
                                                      Value="{Binding ResetDelay, UpdateSourceTrigger=PropertyChanged}"
                                                      Margin="0,0,0,8" />

                                        <!-- 时间范围 -->
                                        <TextBlock Text="时间范围："
                                                   Grid.Row="5"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,8,0" />
                                        <Grid Grid.Row="5" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <ui:NumberBox Grid.Column="0"
                                                          ClearButtonEnabled="False"
                                                          Width="120"
                                                          HorizontalAlignment="Left"
                                                          Value="{Binding TimeRangeLower, UpdateSourceTrigger=PropertyChanged}" />

                                            <TextBlock Text=" - "
                                                       Grid.Column="1"
                                                       Margin="8,0"
                                                       VerticalAlignment="Center" />

                                            <ui:NumberBox Grid.Column="2"
                                                          ClearButtonEnabled="False"
                                                          Width="120"
                                                          HorizontalAlignment="Left"
                                                          Value="{Binding TimeRangeUpper, UpdateSourceTrigger=PropertyChanged}" />

                                            <TextBlock Text="毫秒"
                                                       Grid.Column="3"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center" />
                                        </Grid>

                                        <!-- 删除按钮 -->
                                        <ui:Button Grid.Row="0"
                                                   Grid.Column="2"
                                                   Grid.RowSpan="4"
                                                   Margin="16,0,0,0"
                                                   Appearance="Danger"
                                                   Command="{Binding DataContext.RemovePhotoelectricCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                   CommandParameter="{Binding}"
                                                   Padding="8,6"
                                                   ToolTip="删除光电">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="Delete24" Margin="0,0,8,0" />
                                                <TextBlock Text="删除" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </ui:Button>
                                    </Grid>
                                </ui:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ui:Card>

            <!-- 全局配置 -->
            <ui:Card Margin="0,16,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="全局配置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 重复光电信号过滤时长 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="重复信号过滤时长："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.GlobalDebounceTime, UpdateSourceTrigger=PropertyChanged}"
                                          ToolTip="在此时间内重复的光电信号将被忽略" />
                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

                    <!-- 直行包裹超时时间 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="直行包裹超时时间："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.StraightThroughTimeout, UpdateSourceTrigger=PropertyChanged}"
                                          ToolTip="直行包裹（目的地在最后一个摆轮之后）的超时时间" />
                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>


                    <!-- 连续分拣时间间隔 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="连续分拣时间间隔："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="120"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Configuration.ContinuousSortMaxIntervalMs, UpdateSourceTrigger=PropertyChanged}"
                                          SmallChange="100"
                                          ToolTip="只有当下一个相同格口的包裹预计在此时间窗口内到达时，才跳过回正" />
                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>


                </StackPanel>
            </ui:Card>

            <!-- 保存按钮 -->
            <ui:Button Margin="0,16,0,0"
                       Appearance="Primary"
                       Command="{Binding SaveConfigurationCommand}"
                       HorizontalAlignment="Center"
                       Padding="16,8">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Save24" Margin="0,0,8,0" />
                    <TextBlock Text="保存配置" VerticalAlignment="Center" />
                </StackPanel>
            </ui:Button>
        </StackPanel>
    </Grid>
</Page>