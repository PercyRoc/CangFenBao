<ui:FluentWindow x:Class="SharedUI.Views.HistoryWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:viewModels="clr-namespace:SharedUI.ViewModels"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModels:HistoryWindowViewModel}"
                 Title="包裹历史记录"
                 Height="720"
                 Width="1280"
                 WindowStartupLocation="CenterOwner"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStyle="SingleBorderWindow"
                 ShowInTaskbar="False">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/SharedUI;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Background="{StaticResource TitleBarGradient}" x:Name="TitleBarArea">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 应用图标 -->
            <Border Grid.Column="0"
                    Width="48"
                    Height="32"
                    Effect="{StaticResource IconGlowEffect}" />

            <!-- 标题 -->
            <TextBlock Grid.Column="1"
                       Text="包裹历史记录"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       FontSize="20"
                       FontWeight="SemiBold"
                       TextOptions.TextFormattingMode="Display"
                       Foreground="black"
                       TextOptions.TextRenderingMode="ClearType">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4"
                                      Opacity="0.2"
                                      Direction="270"
                                      ShadowDepth="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- 标题栏按钮 -->
            <ui:TitleBar Grid.Column="2"
                         Title=""
                         ButtonsForeground="#FF008891"
                         ShowMaximize="True"
                         ShowMinimize="True"
                         ShowClose="True" />

            <Border Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Height="1"
                    VerticalAlignment="Bottom"
                    Background="#20008080"
                    BorderBrush="#40FFFFFF"
                    BorderThickness="0,0,0,1" />
        </Grid>

        <!-- 主要内容 -->
        <Border Grid.Row="1" Background="{StaticResource MainBackground}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 查询条件 -->
                <Border Grid.Row="0"
                        Margin="0,0,0,16"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="开始日期:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <DatePicker Grid.Column="1"
                                    SelectedDate="{Binding StartDate}"
                                    Margin="0,0,16,0" />

                        <TextBlock Grid.Column="2"
                                   Text="结束日期:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <DatePicker Grid.Column="3"
                                    SelectedDate="{Binding EndDate}"
                                    Margin="0,0,16,0" />

                        <TextBlock Grid.Column="4"
                                   Text="条码:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <ui:TextBox Grid.Column="5"
                                    Text="{Binding SearchBarcode, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="输入条码..."
                                    ClearButtonEnabled="True"
                                    Icon="Barcode24"
                                    Margin="0,0,16,0" />

                        <TextBlock Grid.Column="6"
                                   Text="格口:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <ui:TextBox Grid.Column="7"
                                    Text="{Binding SearchChute, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="输入格口号..."
                                    ClearButtonEnabled="True"
                                    Icon="BoxMultiple24"
                                    Margin="0,0,16,0" />

                        <StackPanel Grid.Column="8" Orientation="Horizontal">
                            <ui:Button Appearance="Primary"
                                       Command="{Binding QueryCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Search24" Margin="0,0,8,0" />
                                    <TextBlock Text="查询" />
                                </StackPanel>
                            </ui:Button>

                            <ui:Button Appearance="Secondary"
                                       Command="{Binding ExportToExcelCommand}"
                                       Margin="8,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="DocumentTable24" Margin="0,0,8,0" />
                                    <TextBlock Text="导出Excel" />
                                </StackPanel>
                            </ui:Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 数据列表 -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <DataGrid Margin="1"
                              ItemsSource="{Binding PackageRecords}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="All"
                              Style="{DynamicResource DefaultDataGridStyle}"
                              ColumnHeaderStyle="{DynamicResource DefaultDataGridColumnHeaderStyle}"
                              CellStyle="{DynamicResource DefaultDataGridCellStyle}"
                              RowStyle="{DynamicResource DefaultDataGridRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="编号" Binding="{Binding Id}" Width="80" />
                            <DataGridTextColumn Header="条码" Binding="{Binding Barcode}" Width="150" />
                            <DataGridTextColumn Header="格口" Binding="{Binding ChuteName}" Width="80" />
                            <DataGridTextColumn Header="重量(kg)" Binding="{Binding Weight}" Width="100" />
                            <DataGridTextColumn Header="长度(cm)" Binding="{Binding Length, StringFormat={}{0:F1}}"
                                                Width="100" />
                            <DataGridTextColumn Header="宽度(cm)" Binding="{Binding Width, StringFormat={}{0:F1}}"
                                                Width="100" />
                            <DataGridTextColumn Header="高度(cm)" Binding="{Binding Height, StringFormat={}{0:F1}}"
                                                Width="100" />
                            <DataGridTextColumn Header="体积(cm³)" Binding="{Binding Volume}" Width="120" />
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="100" />
                            <DataGridTextColumn Header="创建时间"
                                                Binding="{Binding CreateTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- 消息通知容器 -->
        <StackPanel Name="GrowlPanel"
                    Grid.Row="1"
                    hc:Growl.GrowlParent="True"
                    hc:Growl.Token="HistoryWindowGrowl"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    Panel.ZIndex="1000" />
    </Grid>
</ui:FluentWindow>