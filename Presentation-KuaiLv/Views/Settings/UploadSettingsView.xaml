<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Presentation_KuaiLv.Views.Settings.UploadSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:settings="clr-namespace:Presentation_KuaiLv.ViewModels.Settings"
      xmlns:converters="clr-namespace:Presentation_CommonLibrary.Converters;assembly=Presentation-CommonLibrary"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:UploadSettingsViewModel}"
      mc:Ignorable="d"
      Title="回传设置">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/DataGridStyles.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/ColorStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <ScrollViewer HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
            <StackPanel Margin="16">
                <TextBlock Text="回传设置"
                           HorizontalAlignment="Center"
                           Style="{DynamicResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,16" />

                <!-- 回传配置 -->
                <ui:Card>
                    <StackPanel Margin="16">
                        <TextBlock Text="环境配置"
                                   Style="{DynamicResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,16" />

                        <!-- 环境选择 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="环境："
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <ComboBox Width="200"
                                      ItemsSource="{Binding Environments}"
                                      SelectedItem="{Binding Configuration.Environment}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Secret配置 -->
                        <TextBlock Text="Secret配置"
                                   Style="{DynamicResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,16" />

                        <StackPanel>
                            <TextBlock Text="Secret："
                                       Margin="0,0,0,8" />
                            <ui:TextBox Text="{Binding Configuration.Secret}"
                                        PlaceholderText="请输入Secret"
                                        Width="200"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,16" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 