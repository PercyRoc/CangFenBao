<UserControl x:Class="JinHuaQiHang.Views.Settings.YunDaUploadSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewmodels="clr-namespace:JinHuaQiHang.ViewModels.Settings"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance viewmodels:YunDaUploadSettingsViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel MaxWidth="600" Margin="16" VerticalAlignment="Top">
            <TextBlock Text="韵达揽收配置"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16" />

            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="韵达揽收服务设置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- AppKey -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="AppKey：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AppKey, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入开放平台分配的AppKey" />
                    </Grid>

                    <!-- Secret -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Secret：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.Secret, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入开放平台分配的AppSecret" />
                    </Grid>

                    <!-- PartnerId -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="合作商ID：" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.PartnerId, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入韵达系统分配的合作商ID" />
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="合作商密码：" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.Password, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入韵达系统分配的合作商密码" />
                    </Grid>

                    <!-- Rc4Key -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="密钥 (Rc4Key)：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.Rc4Key, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入韵达系统分配的密钥" />
                    </Grid>

                    <!-- GunId -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="称重机器序列号：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <hc:NumericUpDown Grid.Column="1"
                                          Value="{Binding Settings.GunId, UpdateSourceTrigger=PropertyChanged}"
                                          Width="120" HorizontalAlignment="Left" />
                    </Grid>

                    <!-- ScanSite -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="扫描站点：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <hc:NumericUpDown Grid.Column="1"
                                          Value="{Binding Settings.ScanSite, UpdateSourceTrigger=PropertyChanged}"
                                          Width="120" HorizontalAlignment="Left" />
                    </Grid>

                    <!-- ScanMan -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="扫描员编码 (ScanMan)：" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.ScanMan, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入韵达内部的扫描员编码" />
                    </Grid>

                    <!-- 上传URL -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="上传URL：" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.UploadUrl, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入韵达API的上传URL地址" />
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</UserControl>