<UserControl x:Class="LosAngelesExpress.Views.Settings.CainiaoSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:LosAngelesExpress.ViewModels.Settings"
             xmlns:commonConverters="clr-namespace:Common.Converters;assembly=Common"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type= viewModels:CainiaoSettingsViewModel}">

    <UserControl.Resources>
        <!-- 定义Common模块中的转换器实例为资源 -->
        <commonConverters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <!-- 测试注释，确保文件被修改 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16">
            
            <!-- Title -->
            <TextBlock Text="Cainiao API Settings" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>
            
            <!-- Environment Selection -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="Environment" 
                               FontWeight="Medium" 
                               FontSize="14"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <RadioButton Content="Pre-production Environment"
                                     IsChecked="{Binding Settings.UsePreEnvironment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     GroupName="Environment"/>
                        <RadioButton Content="Production Environment"
                                     IsChecked="{Binding Settings.UsePreEnvironment, Converter={StaticResource InverseBooleanConverter}, Mode=TwoWay}"
                                     GroupName="Environment"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding Settings.CurrentApiUrl, StringFormat='Current API URL: {0}'}" 
                               FontStyle="Italic" 
                               Foreground="Gray" 
                               FontSize="12"/>
                </StackPanel>
            </ui:Card>
            
            <!-- API URLs Configuration -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="API URLs Configuration" 
                               FontWeight="Medium" 
                               FontSize="14"/>
                    
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Pre-production API URL:"/>
                        <ui:TextBox Text="{Binding Settings.PreApiUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="Enter pre-production API URL"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Production API URL:"/>
                        <ui:TextBox Text="{Binding Settings.ProductionApiUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="Enter production API URL"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
            
            <!-- Authentication -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="Authentication" 
                               FontWeight="Medium" 
                               FontSize="14"/>
                    
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="App Secret:"/>
                        <ui:PasswordBox Password="{Binding Settings.AppSecret, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="Enter app secret"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
            
            <!-- Device Configuration -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="Device Configuration" 
                               FontWeight="Medium" 
                               FontSize="14"/>
                    
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Workbench ID:"/>
                        <ui:TextBox Text="{Binding Settings.Workbench, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="Enter workbench/device ID"/>
                        <TextBlock Text="Device identifier used in API requests" 
                                   FontStyle="Italic" 
                                   Foreground="Gray" 
                                   FontSize="11"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
            
            <!-- Network Settings -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="Network Settings" 
                               FontWeight="Medium" 
                               FontSize="14"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,8,0,0">
                            <TextBlock Text="Timeout (seconds):"/>
                            <ui:NumberBox Value="{Binding Settings.TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="5" 
                                          Maximum="300"
                                          PlaceholderText="30"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="0,8,0,0">
                            <TextBlock Text="Retry Count:"/>
                            <ui:NumberBox Value="{Binding Settings.RetryCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="1" 
                                          Maximum="10"
                                          PlaceholderText="3"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Retry Delay (milliseconds):"/>
                        <ui:NumberBox Value="{Binding Settings.RetryDelayMilliseconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      Minimum="100" 
                                      Maximum="10000"
                                      PlaceholderText="1000"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- Test Area -->
            <ui:Card Margin="0,16,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="API Test"
                               FontWeight="Medium"
                               FontSize="14"/>

                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Barcode:"/>
                        <ui:TextBox Text="{Binding TestBarcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter barcode for testing"/>
                    </StackPanel>

                    <ui:Button Content="Test API"
                               Command="{Binding TestApiCommand}"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl> 