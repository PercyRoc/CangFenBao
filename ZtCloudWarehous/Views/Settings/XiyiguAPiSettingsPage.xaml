<Page x:Class="ZtCloudWarehous.Views.Settings.XiyiguAPiSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:settings="clr-namespace:ZtCloudWarehous.ViewModels.Settings"
      xmlns:mvvm="http://prismlibrary.com/"
      mvvm:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:XiyiguAPiSettingsViewModel}"
      mc:Ignorable="d"
      Title="西逸谷API设置">
    <Grid>
        <StackPanel MaxWidth="500" Margin="16" VerticalAlignment="Top">
            <TextBlock Text="西逸谷API设置"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       Margin="0,0,0,16" />

            <!-- API配置 -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="西逸谷API设置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 基础URL -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="基础URL："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1" Text="{Binding XiyiguApiSettings.BaseUrl}" PlaceholderText="请输入API基础URL" />
                    </Grid>

                    <!-- AES密钥 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="AES密钥："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1" Text="{Binding XiyiguApiSettings.AesKey}" PlaceholderText="请输入AES密钥" />
                    </Grid>

                    <!-- 设备编号 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="设备编号："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />
                        <ui:TextBox Grid.Column="1" Text="{Binding XiyiguApiSettings.MachineMx}" PlaceholderText="请输入设备编号" />
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>