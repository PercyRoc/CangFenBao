<UserControl x:Class="Server.YouYu.Views.YouYuSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewModels="clr-namespace:Server.YouYu.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:YouYuSettingsViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel MaxWidth="500" Margin="16" VerticalAlignment="Top">
            <TextBlock Text="朔州右玉接口配置"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16" />

            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="接口参数"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- URL -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="接口地址 (URL)："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.Url, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入接口地址" />
                    </Grid>

                    <!-- AppId -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="应用ID (AppId)："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AppId, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入AppId" />
                    </Grid>

                    <!-- AppKey -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="应用密钥 (AppKey)："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AppKey, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入AppKey" />
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</UserControl> 