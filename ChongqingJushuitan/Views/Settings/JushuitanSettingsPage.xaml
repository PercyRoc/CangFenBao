<Page
    x:Class="ChongqingJushuitan.Views.Settings.JushuitanSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:settings="clr-namespace:ChongqingJushuitan.ViewModels.Settings"
    xmlns:converters="clr-namespace:SharedUI.Converters;assembly=SharedUI"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=settings:JushuitanSettingsViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Title="聚水潭称重接口设置" x:ClassModifier="internal">

    <Page.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Page.Resources>

    <Grid>
        <StackPanel MaxWidth="500" Margin="16" VerticalAlignment="Top">
            <TextBlock Text="聚水潭服务配置"
                       Style="{DynamicResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16" />

            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="聚水潭服务配置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 环境选择 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="环境选择："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <RadioButton Content="正式环境"
                                       IsChecked="{Binding Settings.IsProduction}"
                                       Margin="0,0,16,0" />
                            <RadioButton Content="测试环境"
                                       IsChecked="{Binding Settings.IsProduction, Converter={StaticResource InverseBooleanConverter}}" />
                        </StackPanel>
                    </Grid>

                    <!-- AppKey -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="AppKey："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AppKey, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入AppKey" />
                    </Grid>

                    <!-- AccessToken -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="AccessToken："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AccessToken, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入AccessToken" />
                    </Grid>

                    <!-- AppSecret -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="AppSecret："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <ui:TextBox Grid.Column="1"
                                    Text="{Binding Settings.AppSecret, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="请输入AppSecret" />
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>