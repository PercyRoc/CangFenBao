<Page x:Class="Presentation_PlateTurnoverMachine.Views.Settings.PlateTurnoverSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:settings="clr-namespace:Presentation_PlateTurnoverMachine.ViewModels.Settings"
      xmlns:models="clr-namespace:Presentation_PlateTurnoverMachine.Models"
      prism:ViewModelLocator.AutoWireViewModel="True"
      d:DataContext="{d:DesignInstance Type=settings:PlateTurnoverSettingsViewModel}"
      mc:Ignorable="d"
      Title="翻板机设置">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Presentation-CommonLibrary;component/Resources/Styles/DataGridStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel VerticalAlignment="Top">
        <!-- 顶部工具栏 -->
        <Grid Background="{DynamicResource ControlFillColorDefaultBrush}"
              Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 左侧标题 -->
            <TextBlock Text="翻板机配置列表"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="16,0"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <!-- 右侧按钮组 -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Margin="16,0">
                <ui:Button Appearance="Primary"
                           Icon="Add24"
                           Content="添加"
                           Command="{Binding AddItemCommand}"
                           Margin="0,0,8,0" />
                <ui:Button Icon="ArrowImport24"
                           Content="导入"
                           Command="{Binding ImportFromExcelCommand}"
                           Margin="0,0,8,0" />
                <ui:Button Icon="ArrowExport24"
                           Content="导出"
                           Command="{Binding ExportToExcelCommand}"
                           Margin="0,0,8,0" />
            </StackPanel>
        </Grid>

        <!-- InfoBar -->
        <ui:InfoBar Title="{Binding InfoTitle}"
                    Message="{Binding InfoMessage}"
                    IsOpen="{Binding IsInfoBarOpen}"
                    Severity="{Binding InfoSeverity}"
                    Margin="16,8,16,0" />

        <!-- 触发光电配置 -->
        <Border Margin="16,16,16,16"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="触发光电配置"
                           Grid.Row="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="IP地址："
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />

                    <ui:TextBox
                        Text="{Binding Settings.TriggerPhotoelectricIp, UpdateSourceTrigger=PropertyChanged}"
                        Grid.Column="1"
                        PlaceholderText="例如: 192.168.1.100"
                        Margin="0,0,16,0" />

                    <TextBlock Text="端口号："
                               Grid.Column="2"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />

                    <ui:NumberBox Value="{Binding Settings.TriggerPhotoelectricPort}"
                                  Grid.Column="3"
                                  Minimum="1"
                                  Maximum="65535"
                                  SpinButtonPlacementMode="Inline" />
                </Grid>
            </Grid>
        </Border>

        <!-- 列表视图 -->
        <DataGrid Margin="16,0,16,16"
                  Height="400"
                  ItemsSource="{Binding Settings.Items}"
                  d:ItemsSource="{d:DesignInstance Type=models:PlateTurnoverItem}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="Transparent"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource ControlElevationBorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Binding="{Binding Index}" Width="60" IsReadOnly="True" />

                <DataGridTextColumn Header="TCP地址" Binding="{Binding TcpAddress}" Width="100">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="IO点位" Binding="{Binding IoPoint}" Width="100">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="映射格口" Binding="{Binding MappingChute}" Width="100">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="距离当前点位位置" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:NumberBox Value="{Binding Distance}"
                                          Width="120"
                                          Minimum="0"
                                          Maximum="10000" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="分拣延迟系数(0-1)" Binding="{Binding DelayFactor}" Width="150">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="磁铁吸合时间(ms)" Binding="{Binding MagnetTime}" Width="150">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button Appearance="Danger"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Padding="4"
                                       Command="{Binding DataContext.RemoveItemCommand, 
                                             RelativeSource={RelativeSource AncestorType=Page}}"
                                       CommandParameter="{Binding}">
                                <ui:SymbolIcon Symbol="Delete24" FontSize="14" />
                            </ui:Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>