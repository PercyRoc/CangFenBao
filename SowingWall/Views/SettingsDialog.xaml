<UserControl x:Class="SowingWall.Views.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:SowingWall.ViewModels"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             Width="1280"
             Height="720"
             d:DataContext="{d:DesignInstance Type=viewModels:SettingsViewModel}"
             Loaded="SettingsDialog_OnLoaded">
    <Grid>
        <ui:NavigationView IsPaneOpen="True"
                           IsPaneVisible="True"
                           PaneDisplayMode="Left"
                           OpenPaneLength="200"
                           Margin="0"
                           Padding="0"
                           FrameMargin="0"
                           Name="RootNavigation">


        </ui:NavigationView>

        <!-- 按钮区域 -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="16">
            <ui:Button Appearance="Primary"
                       Command="{Binding SaveCommand}"
                       Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Save24" Margin="0,0,8,0" />
                    <TextBlock Text="保存" />
                </StackPanel>
            </ui:Button>
            <ui:Button Appearance="Secondary"
                       Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Dismiss24" Margin="0,0,8,0" />
                    <TextBlock Text="取消" />
                </StackPanel>
            </ui:Button>
        </StackPanel>

        <!-- Growl消息容器 -->
        <StackPanel Name="GrowlPanel"
                    hc:Growl.GrowlParent="True"
                    hc:Growl.Token="SettingWindowGrowl"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    Panel.ZIndex="1000" />
    </Grid>
</UserControl>