            <!-- 等待时间设置 -->
            <ui:Card>
                <StackPanel Margin="16">
                    <TextBlock Text="等待时间设置"
                               Style="{DynamicResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,16" />

                    <!-- 最小等待时间 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="最小等待时间："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="150"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Config.MinWaitTime, UpdateSourceTrigger=PropertyChanged}"
                                          PlaceholderText="请输入最小等待时间"
                                          Icon="Timer24"
                                          Minimum="0" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

                    <!-- 最大等待时间 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="最大等待时间："
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0" />

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox Grid.Column="0"
                                          ClearButtonEnabled="False"
                                          Width="150"
                                          HorizontalAlignment="Left"
                                          Value="{Binding Config.MaxWaitTime, UpdateSourceTrigger=PropertyChanged}"
                                          PlaceholderText="请输入最大等待时间"
                                          Icon="Timer24"
                                          Minimum="0" />

                            <TextBlock Text="毫秒"
                                       Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>

